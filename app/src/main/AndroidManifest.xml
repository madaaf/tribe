<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tribe.app">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature android:glEsVersion="0x00020000" />

    <application
        android:name=".presentation.AndroidApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:hardwareAccelerated="true"
        android:largeHeap="true"
        >

        <activity
            android:name=".presentation.view.activity.LauncherActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".presentation.view.activity.IntroActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            />

        <activity
            android:name=".presentation.view.activity.HomeActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.FullScreen"
            />

        <activity
            android:name=".presentation.view.activity.CountryActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            />

        <activity
            android:name=".presentation.view.activity.ChatActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            />

        <activity
            android:name=".presentation.view.activity.TribeActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.FullScreen.Translucent"
            />

        <activity
            android:name=".presentation.view.activity.DummyActivity"
            android:theme="@style/AppTheme.Transparent.Dummy"
            android:screenOrientation="portrait"
            />

        <service
            android:name=".presentation.service.TribeFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>

        <service
            android:name=".presentation.service.TribeFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>

    </application>
</manifest>
