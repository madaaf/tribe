<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutContent"
    android:layout_width="match_parent"
    android:layout_height="156dp"
    android:background="@null"
    android:padding="@dimen/horizontal_margin_small"
    >

  <View
      android:id="@+id/viewBackground"
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

  <ImageView
      android:id="@+id/imgBanner"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:scaleType="fitEnd"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

  <ImageView
      android:id="@+id/imgIcon"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/horizontal_margin_large"
      android:scaleType="centerInside"
      app:layout_constraintBottom_toTopOf="@+id/viewBackgroundBottom"
      app:layout_constraintStart_toStartOf="@id/viewBackground"
      app:layout_constraintTop_toTopOf="parent"
      />


  <com.tribe.app.presentation.view.widget.TextViewFont
      android:id="@+id/txtTitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/horizontal_margin_large"
      android:layout_marginTop="10dp"
      android:textAllCaps="true"
      app:layout_constraintStart_toEndOf="@id/imgIcon"
      app:layout_constraintTop_toTopOf="@id/imgIcon"
      style="@style/Headline.White.2"
      />

  <com.tribe.app.presentation.view.widget.TextViewFont
      android:id="@+id/txtBaseline"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/horizontal_margin_large"
      android:layout_marginTop="7dp"
      app:layout_constraintStart_toEndOf="@id/imgIcon"
      app:layout_constraintTop_toBottomOf="@id/txtTitle"
      style="@style/Title.Regular.Black40"
      />

  <View
      android:id="@+id/viewBackgroundBottom"
      android:layout_width="0dp"
      android:layout_height="26dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      />

  <com.tribe.app.presentation.view.widget.TextViewFont
      android:id="@+id/txtInfo"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/horizontal_margin_smaller"
      android:textAllCaps="true"
      app:layout_constraintBottom_toBottomOf="@id/viewBackgroundBottom"
      app:layout_constraintStart_toStartOf="@id/viewBackgroundBottom"
      app:layout_constraintTop_toTopOf="@id/viewBackgroundBottom"
      style="@style/Caption.Two.White"
      />

  <com.tribe.app.presentation.view.widget.TextViewFont
      android:id="@+id/txtPlayCount"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="@dimen/horizontal_margin_smaller"
      android:textAllCaps="true"
      app:layout_constraintBottom_toBottomOf="@id/viewBackgroundBottom"
      app:layout_constraintEnd_toEndOf="@id/viewBackgroundBottom"
      app:layout_constraintTop_toTopOf="@id/viewBackgroundBottom"
      style="@style/Caption.Two.White"
      />
</android.support.constraint.ConstraintLayout>