<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingTop="25dp"
    android:paddingStart="@dimen/setting_block_item_horizontal_padding"
    android:paddingEnd="@dimen/setting_block_item_horizontal_padding">

    <ImageView
        android:id="@+id/imageFriendPic"
        android:layout_width="@dimen/setting_pic_size"
        android:layout_height="@dimen/setting_pic_size" />

    <com.tribe.app.presentation.view.widget.TextViewFont
        android:id="@+id/txtDisplayName"
        android:layout_marginStart="@dimen/setting_block_item_left_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Title.1.Black"
        />

    <com.tribe.app.presentation.view.widget.TextViewFont
        android:id="@+id/txtUsername"
        android:layout_marginStart="@dimen/setting_block_item_left_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        style="@style/Body.Two.Blue"
        />

    <ImageView
        android:id="@+id/imageBlock"
        android:layout_width="@dimen/setting_pic_size"
        android:layout_height="@dimen/setting_pic_size"
        android:layout_gravity="end"/>

</FrameLayout>