<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="100dp"
      android:background="@android:color/white"
      android:orientation="horizontal"
      >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:src="@drawable/picto_camera_grpsetting"
        />

    <include layout="@layout/view_separator_vertical_simple" />

    <com.tribe.app.presentation.view.widget.EditTextFont
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:hint="@string/group_add_members_search_placeholder"
        android:paddingStart="20dp"
        android:text="Group Name"
        android:textColorHint="@color/black.opacity.40"
        style="@style/Title.2.Black40"
        />
  </LinearLayout>
</LinearLayout>