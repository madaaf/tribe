<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="@dimen/horizontal_margin"
    android:layout_marginStart="@dimen/horizontal_margin"
    android:gravity="center"
    android:orientation="vertical"
    >
  <android.support.v7.widget.CardView

      android:id="@+id/cardView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:background="@android:color/transparent"
      android:clipChildren="false"
      app:cardBackgroundColor="@android:color/transparent"
      app:cardElevation="5dp"
      app:cardPreventCornerOverlap="false"
      app:cardUseCompatPadding="true"
      >
    <android.support.constraint.ConstraintLayout
        android:id="@+id/layoutConstraint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
      <View
          android:id="@+id/layoutTop"
          android:layout_width="0dp"
          android:layout_height="111dp"
          app:layout_constraintBottom_toTopOf="@+id/layoutDesc"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          />

      <View
          android:id="@+id/layoutDesc"
          android:layout_width="0dp"
          android:layout_height="161dp"
          android:background="@android:color/white"
          android:gravity="center"
          android:orientation="vertical"
          app:layout_constraintBottom_toBottomOf="@id/viewRequirementFirst"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/layoutTop"
          />

      <com.tribe.app.presentation.view.widget.TextViewFont
          android:id="@+id/txtTitle"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/horizontal_margin"
          android:gravity="center"
          app:layout_constraintBottom_toTopOf="@+id/txtDesc"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/cardViewTrophy"
          app:layout_constraintVertical_chainStyle="packed"
          style="@style/Big.Circular.3.Black"
          />

      <com.tribe.app.presentation.view.widget.TextViewFont
          android:id="@+id/txtDesc"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginEnd="@dimen/horizontal_margin"
          android:layout_marginStart="@dimen/horizontal_margin"
          android:layout_marginTop="@dimen/horizontal_margin_small"
          android:gravity="center"
          app:layout_constraintBottom_toTopOf="@+id/separator"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/txtTitle"
          style="@style/Title.2.Black40"
          />

      <View
          android:id="@+id/separator"
          android:layout_width="0dp"
          android:layout_height="0.5dp"
          android:layout_marginTop="30dp"
          android:background="@color/grey.light"
          app:layout_constraintBottom_toTopOf="@+id/viewRequirementFirst"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/txtDesc"
          />

      <com.tribe.app.presentation.view.component.trophies.TrophyRequirementView
          android:id="@+id/viewRequirementFirst"
          android:layout_width="0dp"
          android:layout_height="100dp"
          app:layout_constraintEnd_toStartOf="@+id/viewRequirementSecond"
          app:layout_constraintHorizontal_chainStyle="spread"
          app:layout_constraintHorizontal_weight="1"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/separator"
          />

      <com.tribe.app.presentation.view.component.trophies.TrophyRequirementView
          android:id="@+id/viewRequirementSecond"
          android:layout_width="0dp"
          android:layout_height="100dp"
          app:layout_constraintBottom_toBottomOf="@id/viewRequirementFirst"
          app:layout_constraintEnd_toStartOf="@+id/viewRequirementThird"
          app:layout_constraintHorizontal_weight="1"
          app:layout_constraintStart_toEndOf="@id/viewRequirementFirst"
          app:layout_constraintTop_toTopOf="@id/viewRequirementFirst"
          />

      <com.tribe.app.presentation.view.component.trophies.TrophyRequirementView
          android:id="@+id/viewRequirementThird"
          android:layout_width="0dp"
          android:layout_height="100dp"
          app:layout_constraintBottom_toBottomOf="@id/viewRequirementFirst"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_weight="1"
          app:layout_constraintStart_toEndOf="@id/viewRequirementSecond"
          app:layout_constraintTop_toTopOf="@id/viewRequirementFirst"
          />

      <com.tribe.app.presentation.view.widget.TextViewFont
          android:id="@+id/btnUseIcon"
          android:layout_width="0dp"
          android:layout_height="60dp"
          android:gravity="center"
          android:text="@string/trophy_popup_action_use_icon"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/viewRequirementFirst"
          style="@style/Title.2.White"
          android:visibility="gone"
          />

      <com.tribe.app.presentation.view.widget.TextViewFont
          android:id="@+id/btnCloseIcon"
          android:layout_width="0dp"
          android:layout_height="60dp"
          android:gravity="center"
          android:text="@string/action_got_it"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/viewRequirementFirst"
          style="@style/Title.2.White"
          android:visibility="gone"
          />

      <ImageView
          android:id="@+id/imgLock"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/horizontal_margin"
          android:scaleType="centerInside"
          android:src="@drawable/picto_lock_big"
          app:layout_constraintBottom_toBottomOf="@id/btnCloseIcon"
          app:layout_constraintStart_toStartOf="@id/btnCloseIcon"
          app:layout_constraintTop_toTopOf="@id/btnCloseIcon"
          android:visibility="gone"
          />

      <android.support.constraint.Group
          android:id="@+id/btnCloseGroup"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:visibility="gone"
          app:constraint_referenced_ids="imgLock, btnCloseIcon"
          />

      <android.support.v7.widget.CardView
          android:id="@+id/cardViewTrophy"
          android:layout_width="64dp"
          android:layout_height="64dp"
          android:clipChildren="false"
          android:rotation="2"
          app:cardBackgroundColor="@android:color/transparent"
          app:cardElevation="5dp"
          app:cardPreventCornerOverlap="false"
          app:layout_constraintBottom_toBottomOf="@id/layoutTop"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="@id/layoutDesc"
          >

        <ImageView
            android:id="@+id/imgIcon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

      </android.support.v7.widget.CardView>
    </android.support.constraint.ConstraintLayout>
  </android.support.v7.widget.CardView>

  <com.tribe.app.presentation.view.widget.TextViewFont
      android:id="@+id/txtAlreadyInUse"
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:gravity="center"
      android:text="@string/trophy_popup_icon_currently_used"
      android:visibility="gone"
      style="@style/Title.2.White"
      />

</LinearLayout>