<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginEnd="@dimen/horizontal_margin"
    android:layout_marginStart="@dimen/horizontal_margin"
    android:background="@android:color/transparent"
    android:clipChildren="false"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardElevation="10dp"
    app:cardMaxElevation="10dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    >
  <android.support.constraint.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >
    <View
        android:id="@+id/layoutTop"
        android:layout_width="0dp"
        android:layout_height="111dp"
        app:layout_constraintBottom_toTopOf="@+id/layoutDesc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <View
        android:id="@+id/layoutDesc"
        android:layout_width="0dp"
        android:layout_height="275dp"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/viewRequirementDays"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutTop"
        />

    <com.tribe.app.presentation.view.widget.TextViewFont
        android:id="@+id/txtTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/txtDesc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardViewTrophy"
        app:layout_constraintVertical_chainStyle="packed"
        style="@style/Big.Circular.3.Black"
        />

    <com.tribe.app.presentation.view.widget.TextViewFont
        android:id="@+id/txtDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/horizontal_margin"
        android:layout_marginStart="@dimen/horizontal_margin"
        android:layout_marginTop="@dimen/vertical_margin_small"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/separator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtTitle"
        style="@style/Title.2.Black40"
        />

    <View
        android:id="@+id/separator"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="30dp"
        android:background="@color/black.opacity.40"
        app:layout_constraintBottom_toTopOf="@+id/viewRequirementFriends"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtDesc"
        />

    <com.tribe.app.presentation.view.component.trophies.TrophyRequirementView
        android:id="@+id/viewRequirementFriends"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toStartOf="@+id/viewRequirementDays"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/separator"
        />

    <com.tribe.app.presentation.view.component.trophies.TrophyRequirementView
        android:id="@+id/viewRequirementDays"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toStartOf="@+id/viewRequirementGames"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/viewRequirementFriends"
        app:layout_constraintTop_toBottomOf="@id/separator"
        />

    <com.tribe.app.presentation.view.component.trophies.TrophyRequirementView
        android:id="@+id/viewRequirementGames"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/viewRequirementDays"
        app:layout_constraintTop_toBottomOf="@id/separator"
        />

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewTrophy"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:clipChildren="false"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintBottom_toBottomOf="@id/layoutTop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/layoutDesc"
        >

      <ImageView
          android:id="@+id/imgIcon"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          />

    </android.support.v7.widget.CardView>
  </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>