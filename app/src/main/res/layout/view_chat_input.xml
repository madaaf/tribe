<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/chat_bar_height"
    android:background="@android:color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/btnPhotoPicker"
        android:layout_width="@dimen/chat_bar_height"
        android:layout_height="@dimen/chat_bar_height"
        android:padding="@dimen/horizontal_margin_small"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgGallery"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/divider_size"
            android:scaleType="centerCrop"
            android:background="@drawable/shape_rounded_gallery"
            android:clickable="true"
            />

    </LinearLayout>

    <View
        android:layout_width="@dimen/divider_size"
        android:layout_height="match_parent"
        android:background="@color/grey.light"
        />

    <com.tribe.app.presentation.view.widget.ActionEditText
        android:id="@+id/editTextMessage"
        android:background="@null"
        android:layout_marginLeft="@dimen/horizontal_margin_small"
        android:layout_marginRight="@dimen/horizontal_margin"
        android:layout_marginTop="@dimen/horizontal_margin_small"
        android:layout_marginBottom="@dimen/horizontal_margin_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|left"
        android:lineSpacingExtra="2dp"
        android:hint="@string/chat_text_placeholder"
        android:textColorHint="@color/black.opacity.40"
        style="@style/Title.1.Black"
        android:inputType="textAutoCorrect|textCapSentences|textMultiLine"
        android:imeOptions="actionSend"
        />

</LinearLayout>