<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:minHeight="322.5dp"
    android:minWidth="265.5dp"
    android:layout_height="322.5dp"
    android:layout_width="265.5dp"
    android:orientation="vertical"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="0dp"
    android:background="@drawable/shape_rect_white_rounded_corners"
    >

    <FrameLayout
        android:id="@+id/layoutContent"
        android:layout_width="265.5dp"
        android:layout_height="265.5dp"
        android:layout_gravity="center"
        android:clickable="true">

        <View
            android:id="@+id/viewShapeAngle"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_marginLeft="-25dp"
            android:layout_marginBottom="-25dp"
            android:layout_gravity="bottom"
            android:rotation="-2"
            android:visibility="visible"
            android:clickable="true"
            />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="top|left"
            android:layout_marginLeft="@dimen/horizontal_margin_small"
            android:layout_marginTop="@dimen/horizontal_margin_small"
            android:src="@drawable/picto_sharing_card_logo"
            android:scaleType="centerInside"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_gravity="top|left"
            android:layout_marginLeft="@dimen/horizontal_margin_small"
            android:layout_marginTop="@dimen/horizontal_margin_small"
            android:src="@drawable/picto_sharing_card_logo_text"
            android:scaleType="centerInside"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="top|right"
            android:layout_marginRight="@dimen/horizontal_margin_small"
            android:layout_marginTop="@dimen/horizontal_margin_small"
            android:src="@drawable/picto_android_ios"
            android:scaleType="fitEnd"
            />

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="@dimen/avatar_size_scaled"
            android:layout_height="@dimen/avatar_size_scaled"
            android:layout_gravity="center"
            android:padding="4dp"
            android:background="@drawable/bg_oval_onboarding"
            />

        <com.tribe.app.presentation.view.widget.TextViewFont
            android:id="@+id/txtUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/vertical_margin_small"
            android:layout_gravity="bottom"
            android:gravity="center"
            style="@style/Headline.White.2"
            />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/imgInstagram"
            android:layout_width="@dimen/dialog_fragment_icon_size"
            android:layout_height="match_parent"
            android:background="@color/instagram"
            android:foreground="@drawable/selectable_button_light"
            android:clickable="true"
            android:scaleType="centerInside"
            android:src="@drawable/picto_instagram"
            />

        <ImageView
            android:id="@+id/imgTwitter"
            android:layout_width="@dimen/dialog_fragment_icon_size"
            android:layout_height="match_parent"
            android:background="@color/twitter"
            android:foreground="@drawable/selectable_button_light"
            android:clickable="true"
            android:scaleType="centerInside"
            android:src="@drawable/picto_twitter"
            />

        <ImageView
            android:id="@+id/imgSnapchat"
            android:layout_width="@dimen/dialog_fragment_icon_size"
            android:layout_height="match_parent"
            android:background="@color/snapchat"
            android:foreground="@drawable/selectable_button_light"
            android:clickable="true"
            android:scaleType="centerInside"
            android:src="@drawable/picto_snapchat_white"
            />

        <ImageView
            android:id="@+id/imgMore"
            android:layout_width="@dimen/dialog_fragment_icon_size"
            android:layout_height="match_parent"
            android:background="@drawable/selectable_button"
            android:clickable="true"
            android:scaleType="centerInside"
            android:src="@drawable/picto_more_black"
            />
    </LinearLayout>
</LinearLayout>