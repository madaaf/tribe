<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:layout_width="@dimen/load_friends_height"
        android:layout_height="match_parent"
        android:background="@null">

        <com.tribe.app.presentation.view.widget.avatar.AvatarView
            android:id="@+id/viewAvatar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="@dimen/horizontal_margin_small"
            android:background="@drawable/shape_oval_black40" />

        <LinearLayout
            android:id="@+id/layoutBG"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="right|bottom"
            android:layout_marginRight="@dimen/horizontal_margin_small"
            android:layout_marginBottom="@dimen/horizontal_margin_smaller"
            android:gravity="center">

            <com.tribe.app.presentation.view.widget.avatar.AvatarView
                android:id="@+id/viewAvatarBis"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/shape_oval_black40" />

        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/pick_all_height"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/horizontal_margin_small">

        <com.tribe.app.presentation.view.widget.TextViewFont
            android:id="@+id/txtTitle"
            style="@style/Title.2.White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.tribe.app.presentation.view.widget.TextViewFont
            android:id="@+id/txtBody"
            style="@style/Body.One.Black40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_marginEnd="@dimen/horizontal_margin"
        android:scaleType="centerInside"
        android:src="@drawable/picto_next" />
</merge>