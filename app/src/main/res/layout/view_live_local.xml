<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

  <com.tribe.app.presentation.view.component.live.LiveAudioView
      android:id="@+id/viewAudio"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      />


  <FrameLayout
      android:id="@+id/viewMicroDisabled"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/black.opacity.50"
      android:visibility="gone"
      >

    <ImageView
        android:layout_width="@dimen/nav_icon_size"
        android:layout_height="@dimen/nav_icon_size"
        android:layout_gravity="center"
        android:background="@drawable/selectable_button_oval_light"
        android:scaleType="centerInside"
        android:src="@drawable/picto_micro_off_shadow"
        />

  </FrameLayout>


  <com.tribe.app.presentation.view.widget.TextViewFont
      android:id="@+id/txtLowConnectivity"
      android:layout_width="match_parent"
      android:layout_height="@dimen/top_bar_height_small"
      android:layout_gravity="top|center_horizontal"
      android:background="@color/red"
      android:gravity="center"
      android:maxLines="1"
      style="@style/Body.Two.White"
      />
</merge>