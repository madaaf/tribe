<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

  <com.tribe.app.presentation.view.widget.CircleView
      android:id="@+id/viewCircle"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_gravity="center"
      />

  <com.tribe.app.presentation.view.widget.TextViewFont
      android:id="@+id/txtDropInTheLive"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_margin="@dimen/horizontal_margin_small"
      android:gravity="center"
      android:singleLine="true"
      android:text="@string/live_drop_friend"
      style="@style/Body.One.Black40"
      />

  <com.tribe.app.presentation.view.component.live.BuzzView
      android:id="@+id/viewBuzz"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_gravity="center"
      android:visibility="gone"
      app:buzzType="big"
      />

  <com.tribe.app.presentation.view.widget.CircularProgressBar
      android:id="@+id/progressBarJoining"
      android:layout_width="95dp"
      android:layout_height="95dp"
      android:layout_gravity="center"
      android:background="@null"
      android:visibility="gone"
      />

  <com.tribe.app.presentation.view.widget.CircularProgressBar
      android:id="@+id/progressBarNotify"
      android:layout_width="95dp"
      android:layout_height="95dp"
      android:layout_gravity="center"
      android:background="@null"
      android:visibility="gone"
      />

  <com.tribe.app.presentation.view.component.live.LiveWaitingAvatarView
      android:id="@+id/viewAvatar"
      android:layout_width="95dp"
      android:layout_height="95dp"
      android:layout_gravity="center"
      />
</merge>