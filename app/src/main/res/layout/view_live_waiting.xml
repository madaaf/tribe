<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

  <com.tribe.app.presentation.view.widget.CircleView
      android:id="@+id/viewCircle"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_gravity="center"
      />

  <com.tribe.app.presentation.view.widget.TextViewFont
      android:id="@+id/txtDropInTheLive"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_margin="@dimen/horizontal_margin_small"
      android:gravity="center"
      android:singleLine="true"
      android:text="@string/live_drop_friend"
      style="@style/Body.One.Black40"
      />

  <com.tribe.app.presentation.view.component.live.BuzzView
      android:id="@+id/viewBuzz"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_gravity="center"
      android:visibility="gone"
      app:buzzType="big"
      />

  <View
      android:id="@+id/viewShadowAvatar"
      android:layout_width="@dimen/avatar_size_big_shadow"
      android:layout_height="@dimen/avatar_size_big_shadow"
      android:layout_gravity="center"
      android:background="@drawable/bg_avatar_shadow"
      android:visibility="gone"
      />

  <ProgressBar
      android:id="@+id/progressBar"
      android:layout_width="95dp"
      android:layout_height="95dp"
      android:layout_gravity="center"
      android:background="@drawable/shape_ring_white10"
      android:max="@integer/time_tap_to_cancel"
      android:progress="0"
      android:progressDrawable="@drawable/progress_circular"
      android:visibility="gone"
      style="?android:attr/progressBarStyleHorizontal"
      />

  <com.tribe.app.presentation.view.widget.avatar.AvatarView
      android:id="@+id/avatar"
      android:layout_width="@dimen/avatar_size_big"
      android:layout_height="@dimen/avatar_size_big"
      android:layout_gravity="center"
      android:layout_margin="@dimen/horizontal_margin_small"
      android:background="@null"
      android:visibility="gone"
      />

  <View
      android:id="@+id/viewForegroundAvatar"
      android:layout_width="@dimen/avatar_size_big"
      android:layout_height="@dimen/avatar_size_big"
      android:layout_gravity="center"
      android:background="@drawable/shape_oval_black40"
      android:visibility="gone"
      />

  <com.tribe.app.presentation.view.component.live.ThreeDotsView
      android:id="@+id/viewThreeDots"
      android:layout_width="@dimen/avatar_size_big"
      android:layout_height="@dimen/avatar_size_big"
      android:layout_gravity="center"
      android:background="@null"
      android:visibility="gone"
      />

  <com.tribe.app.presentation.view.widget.TextViewFont
      android:id="@+id/txtCountdown"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:gravity="center"
      android:visibility="gone"
      style="@style/Medium.1.White"
      />

  <View
      android:id="@+id/viewRing"
      android:layout_width="@dimen/avatar_size_big"
      android:layout_height="@dimen/avatar_size_big"
      android:layout_gravity="center"
      android:background="@drawable/shape_ring_white"
      android:visibility="gone"
      />

  <ImageView
      android:id="@+id/btnRemove"
      android:layout_width="@dimen/nav_icon_size"
      android:layout_height="@dimen/nav_icon_size"
      android:layout_gravity="center"
      android:background="@drawable/selectable_button_oval"
      android:scaleType="centerInside"
      android:scaleX="0"
      android:scaleY="0"
      android:src="@drawable/picto_white_cross"
      android:visibility="gone"
      />
</merge>