<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/blue.new"
    >

  <com.tribe.app.presentation.view.widget.TextViewFont
      android:id="@+id/txtLink"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginStart="@dimen/horizontal_margin_small"
      android:ellipsize="end"
      android:maxLines="1"
      android:text="@string/live_invite_section_invite_link"
      android:textAllCaps="true"
      style="@style/Body.Two.White"
      />

  <ImageView
      android:id="@+id/btnShare"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:layout_gravity="center_vertical|end"
      android:layout_marginBottom="5dp"
      android:layout_marginTop="5dp"
      android:clickable="true"
      android:foreground="@drawable/selectable_button_oval_light"
      android:scaleType="centerInside"
      android:src="@drawable/picto_more_friends"
      />
</FrameLayout>