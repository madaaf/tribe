<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

  <com.tribe.app.presentation.view.widget.RecyclerViewInvite
      android:id="@+id/recyclerViewInvite"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginBottom="43dp"
      android:background="@null"
      android:fadingEdgeLength="0dp"
      android:overScrollMode="never"
      android:requiresFadingEdge="none"
      android:scrollbars="none"
      />

  <View
      android:layout_width="match_parent"
      android:layout_height="0.5dp"
      android:layout_gravity="bottom"
      android:layout_marginBottom="42.5dp"
      android:background="@color/grey.divider"
      />

  <com.tribe.app.presentation.view.component.live.LiveInviteBottomView
      android:id="@+id/btnMore"
      android:layout_width="match_parent"
      android:layout_height="43dp"
      android:layout_gravity="bottom"
      android:background="@color/grey.lighter"
      android:clickable="true"
      />

</merge>