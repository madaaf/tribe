<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rect_white_rounded_corners_top"
        >

      <ImageView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:scaleType="fitStart"
          android:src="@drawable/bg_drag_friend_popup_view"
          />
    </FrameLayout>

    <com.tribe.app.presentation.view.widget.TextViewFont
        android:id="@+id/textViewFont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@drawable/shape_rect_white_bottom_corner"
        android:gravity="center"
        android:lineSpacingExtra="4sp"
        android:padding="30dp"
        android:text="@string/live_tutorial_drag_as_guest"
        />
  </LinearLayout>

</FrameLayout>