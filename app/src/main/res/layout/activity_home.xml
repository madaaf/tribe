<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    >

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewFriends"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        />

    <ImageView
        android:id="@+id/imgFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="8.5dp"
        android:src="@drawable/picto_keyboard_search"
        android:clickable="true"
        />

    <ImageView
        android:id="@+id/imgFilterSelected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="8.5dp"
        android:src="@drawable/picto_filter_cancel"
        android:clickable="true"
        android:visibility="gone"
        />
    
    <com.tribe.app.presentation.view.widget.CameraWrapper
        android:id="@+id/cameraWrapper"
        android:layout_width="@dimen/camera_width"
        android:layout_height="@dimen/camera_height"
        android:layout_gravity="top|left"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="false"
        android:background="@null"
        />

    <View
        android:id="@+id/viewBG"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black.opacity.20"
        android:alpha="0"
        android:visibility="gone"
        android:clickable="true"
        />

    <com.tribe.app.presentation.view.component.FilterView
        android:id="@+id/viewFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:elevation="10dp"
        android:background="@null"
        />
</FrameLayout>