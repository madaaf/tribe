<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    >

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_layout_height"
        android:layout_gravity="bottom">

        <ImageView
            android:id="@+id/imgNavGrid"
            android:layout_width="@dimen/nav_size_max"
            android:layout_height="@dimen/nav_size_max"
            android:layout_gravity="center"
            android:src="@drawable/picto_nav_grid"
            android:scaleType="fitXY"
            />

        <ImageView
            android:id="@+id/imgNavBackToTop"
            android:layout_width="@dimen/nav_size_max"
            android:layout_height="@dimen/nav_size_max"
            android:layout_gravity="center"
            android:src="@drawable/picto_nav_back_to_top"
            android:scaleType="fitXY"
            android:translationY="@dimen/transition_grid_back_to_top"
            android:alpha="1"
            />

        <ImageView
            android:id="@+id/imgNavFriends"
            android:layout_width="@dimen/nav_size_small"
            android:layout_height="@dimen/nav_size_small"
            android:layout_gravity="center_vertical|left"
            android:layout_marginLeft="@dimen/horizontal_margin_small"
            android:src="@drawable/picto_nav_friends"
            android:scaleType="fitXY"
            />

        <ImageView
            android:id="@+id/imgNavGroups"
            android:layout_width="@dimen/nav_size_small"
            android:layout_height="@dimen/nav_size_small"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="@dimen/horizontal_margin_small"
            android:src="@drawable/picto_nav_group"
            android:scaleType="fitXY"
            />
    </FrameLayout>
</FrameLayout>