<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    >

  <LinearLayout
      android:id="@+id/layoutFocus"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:clickable="true"
      android:focusable="true"
      android:focusableInTouchMode="true"
      android:orientation="vertical"
      />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="90dp"
      android:layout_gravity="center"
      android:layout_marginTop="0dp"
      android:background="@color/blue.2"
      android:gravity="center"
      >

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:src="@drawable/shape_dice_with_border"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/roll_the_dice_grid_button"
        style="@style/Title.2.White"
        />
  </LinearLayout>

  <com.tribe.app.presentation.view.component.TopBarContainer
      android:id="@+id/topBarContainer"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@null"
      >

    <com.tribe.app.presentation.view.component.TopBarView
        android:id="@+id/topBarView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height_expend"
        android:background="@null"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewFriends"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        android:fadingEdgeLength="0dp"
        android:overScrollMode="never"
        android:requiresFadingEdge="none"
        android:scrollbars="none"
        />

    <com.tribe.app.presentation.view.component.home.NewCallView
        android:id="@+id/btnNewCall"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/bottom_bar_height"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_margin="@dimen/horizontal_margin_large"
        android:background="@drawable/shape_oval_white"
        android:clickable="true"
        android:elevation="10dp"
        android:foreground="@drawable/selectable_button"
        />


  </com.tribe.app.presentation.view.component.TopBarContainer>

  <com.tribe.app.presentation.view.widget.PopupContainerView
      android:id="@+id/nativeDialogsView"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:visibility="gone"
      />

  <com.tribe.app.presentation.view.component.home.SearchView
      android:id="@+id/searchView"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginTop="@dimen/top_bar_height"
      android:clickable="true"
      android:visibility="gone"
      />

  <com.tribe.app.presentation.view.widget.notifications.NotificationContainerView
      android:id="@+id/notificationContainerView"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:visibility="gone"
      />

  <com.tribe.app.presentation.view.widget.notifications.RatingNotificationView
      android:id="@+id/ratingNotificationView"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:clickable="true"
      android:visibility="gone"
      />

  <com.tribe.app.presentation.view.widget.notifications.ErrorNotificationView
      android:id="@+id/errorNotificationView"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:clickable="true"
      android:visibility="gone"
      />


  <com.tribe.app.presentation.view.widget.TextViewFont
      android:id="@+id/txtSyncedContacts"
      android:layout_width="match_parent"
      android:layout_height="@dimen/top_bar_notification_height_small"
      android:background="@android:color/black"
      android:gravity="center"
      android:textColor="@android:color/white"
      android:visibility="gone"
      />

  <com.tribe.app.presentation.view.widget.DiceView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_gravity="center"
      android:background="@color/black.opacity.50"
      />


</FrameLayout>