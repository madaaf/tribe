<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="35dp"
    android:layout_height="35dp"
    android:background="@null"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="centerInside"
        android:src="@drawable/picto_facebook_f"
        android:background="@drawable/bg_fb_transition"
        />

    <FrameLayout
        android:id="@+id/layoutSync"
        android:layout_width="14.5dp"
        android:layout_height="14.5dp"
        android:layout_gravity="right|bottom"
        android:layout_marginBottom="1.75dp"
        android:layout_marginRight="1.75dp"
        android:background="@drawable/shape_oval_white"
        android:padding="2dp"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_oval_red"
            />

        <ImageView
            android:id="@+id/viewExclamation"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:src="@drawable/picto_exclamation"
            android:scaleType="centerInside"
            android:layout_gravity="center"
            />

        <com.github.rahatarmanahmed.cpv.CircularProgressView
            android:id="@+id/progressView"
            android:layout_width="7.5dp"
            android:layout_height="7.5dp"
            android:layout_gravity="center"
            android:visibility="gone"
            app:cpv_thickness="@dimen/progress_bar_thickness"
            app:cpv_indeterminate="true"
            app:cpv_color="@android:color/white"
            app:cpv_animAutostart="true"
            />

    </FrameLayout>
</FrameLayout>