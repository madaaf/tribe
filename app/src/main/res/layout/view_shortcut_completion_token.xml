<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

  <com.tribe.app.presentation.view.widget.avatar.AvatarView
      android:id="@+id/viewAvatar"
      android:layout_width="@dimen/avatar_size_shortcut_completion"
      android:layout_height="@dimen/avatar_size_shortcut_completion"
      android:layout_gravity="center_vertical"
      android:layout_margin="7dp"
      />

  <com.tribe.app.presentation.view.widget.TextViewFont
      android:id="@+id/txtName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:layout_marginEnd="13dp"
      android:layout_marginStart="30dp"
      style="@style/Caption.Two.Black"
      />
</merge>