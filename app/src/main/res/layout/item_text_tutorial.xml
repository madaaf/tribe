<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="273.5dp"
    android:layout_gravity="bottom"
    android:gravity="bottom"
    android:orientation="vertical"
    android:background="@null">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_marginLeft="@dimen/horizontal_margin_small"
        android:layout_marginRight="@dimen/horizontal_margin_small"
        android:background="@null">

        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="@dimen/avatar_size_small"
            android:layout_height="@dimen/avatar_size_small"
            android:layout_gravity="center"
            android:background="@null"
            />

        <com.tribe.app.presentation.view.widget.TextViewFont
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imgAvatar"
            android:layout_alignTop="@id/imgAvatar"
            android:layout_marginLeft="@dimen/horizontal_margin_small"
            style="@style/Title.1.Black"
            />

        <com.tribe.app.presentation.view.widget.TextViewFont
            android:id="@+id/txtUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imgAvatar"
            android:layout_alignBottom="@id/imgAvatar"
            android:layout_marginLeft="@dimen/horizontal_margin_small"
            style="@style/Body.One.Black40"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_size"
        android:background="@color/grey.light"
        android:layout_marginLeft="@dimen/horizontal_margin_small"
        android:layout_marginRight="@dimen/horizontal_margin_small"
        />

    <com.tribe.app.presentation.view.widget.TextViewFont
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/horizontal_margin_small"
        android:layout_marginTop="@dimen/vertical_margin_small"
        android:text="@string/chat_tutorial_statuses_title"
        style="@style/Title.1.Black"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/horizontal_margin_small"
        android:layout_marginRight="@dimen/horizontal_margin_small"
        android:layout_marginTop="@dimen/vertical_margin_small"
        android:background="@null"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <com.github.rahatarmanahmed.cpv.CircularProgressView
            android:id="@+id/circularProgressView"
            android:layout_width="@dimen/status_size"
            android:layout_height="@dimen/status_size"
            app:cpv_thickness="@dimen/progress_bar_thickness"
            app:cpv_indeterminate="true"
            app:cpv_color="@color/yellow.status"
            app:cpv_animAutostart="true"
            />

        <com.tribe.app.presentation.view.widget.TextViewFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/horizontal_margin_small"
            android:text="@string/chat_status_sending"
            android:gravity="center_vertical"
            style="@style/Body.One.Black40"
            />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/horizontal_margin_small"
        android:layout_marginRight="@dimen/horizontal_margin_small"
        android:layout_marginTop="5dp"
        android:background="@null"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <View
            android:layout_width="@dimen/status_size"
            android:layout_height="@dimen/status_size"
            android:background="@drawable/shape_status_sent"
            />

        <com.tribe.app.presentation.view.widget.TextViewFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/horizontal_margin_small"
            android:text="@string/chat_status_sent"
            android:gravity="center_vertical"
            style="@style/Body.One.Black40"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/horizontal_margin_small"
        android:layout_marginRight="@dimen/horizontal_margin_small"
        android:layout_marginTop="5dp"
        android:background="@null"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <View
            android:layout_width="@dimen/status_size"
            android:layout_height="@dimen/status_size"
            android:background="@drawable/shape_status_read_partially"
            />

        <com.tribe.app.presentation.view.widget.TextViewFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/horizontal_margin_small"
            android:text="@string/chat_status_read_partly"
            android:gravity="center_vertical"
            style="@style/Body.One.Black40"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/horizontal_margin_small"
        android:layout_marginRight="@dimen/horizontal_margin_small"
        android:layout_marginTop="5dp"
        android:background="@null"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <View
            android:layout_width="@dimen/status_size"
            android:layout_height="@dimen/status_size"
            android:background="@drawable/shape_status_read_everyone"
            />

        <com.tribe.app.presentation.view.widget.TextViewFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/horizontal_margin_small"
            android:text="@string/chat_status_read"
            android:gravity="center_vertical"
            style="@style/Body.One.Black40"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/horizontal_margin_small"
        android:layout_marginRight="@dimen/horizontal_margin_small"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="@dimen/vertical_margin_small"
        android:background="@null"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <View
            android:layout_width="@dimen/status_size"
            android:layout_height="@dimen/status_size"
            android:background="@drawable/shape_status_error"
            />

        <com.tribe.app.presentation.view.widget.TextViewFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/horizontal_margin_small"
            android:text="@string/chat_status_error"
            android:gravity="center_vertical"
            style="@style/Body.One.Black40"
            />

    </LinearLayout>
</LinearLayout>
