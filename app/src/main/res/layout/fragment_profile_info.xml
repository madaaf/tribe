<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey.background.profile_info"
    >

    <com.tribe.app.presentation.view.widget.TextViewFont
        android:layout_width="match_parent"
        android:layout_height="@dimen/onboarding_top_bar_height"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_white_rect_grey_border_no_top"
        android:text="@string/onboarding_user_title"
        android:gravity="center"
        style="@style/Headline.Black"
        />

    <com.tribe.app.presentation.view.component.ProfileInfoView
        android:id="@+id/profileInfoView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    
    <ImageView
        android:id="@+id/imgNextIcon"
        android:layout_width="@dimen/icons_end"
        android:layout_height="@dimen/icons_end"
        android:src="@drawable/picto_next_icon"
        android:scaleType="centerInside"
        android:background="@drawable/shape_white_rect_rounded_bottom_right"
        android:layout_gravity="bottom|end"
        android:clickable="false"
        />

    <View
        android:id="@+id/shadow"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/shadow_top"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/bottom_bar_height"
        />

    <com.tribe.app.presentation.view.widget.FacebookView
        android:id="@+id/facebookView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginEnd="60dp"
        />
    
</FrameLayout>
