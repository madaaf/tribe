<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/shape_white_rect_grey_border_no_top">

        <com.tribe.app.presentation.view.widget.TextViewFont
            android:id="@+id/txtTitle"
            style="@style/Title.1.Black"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/settings_title" />

        <ImageView
            android:id="@+id/imgDone"
            android:layout_width="@dimen/nav_icon_size"
            android:layout_height="@dimen/nav_icon_size"
            android:layout_gravity="end|center_vertical"
            android:clickable="true"
            android:background="@drawable/selectable_button_oval"
            android:scaleType="centerInside"
            android:src="@drawable/picto_done_black" />

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="@dimen/nav_icon_size"
            android:layout_height="@dimen/nav_icon_size"
            android:layout_gravity="left|center_vertical"
            android:src="@drawable/picto_back"
            android:scaleType="centerInside"
            android:background="@drawable/selectable_button_oval"
            android:alpha="0"
            />

    </FrameLayout>
    
    <FrameLayout
        android:layout_marginTop="50dp"
        android:id="@+id/layoutFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/shadow_bottom" />

</FrameLayout>