<?xml version="1.0" encoding="utf-8"?>
<com.tribe.app.presentation.view.component.settings.SettingsBlockedHiddenView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".presentation.view.activity.SettingsActivity"
    android:background="@android:color/white">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:background="@drawable/shape_white_rect_grey_border">

        <ImageView
            android:id="@+id/searchIconImageView"
            android:layout_width="@dimen/icons_end"
            android:layout_height="@dimen/icons_end"
            android:layout_gravity="center_vertical"
            android:scaleType="centerInside"
            android:src="@drawable/picto_search_icon" />

        <com.tribe.app.presentation.view.widget.EditTextFont
            android:id="@+id/editTextSearch"
            android:layout_width="match_parent"
            android:layout_height="@dimen/icons_end"
            android:layout_marginStart="@dimen/icons_end"
            android:layout_marginEnd="@dimen/icons_end"
            android:layout_gravity="center_vertical"
            android:hint="@string/contacts_search_placeholder"
            android:backgroundTint="@android:color/black"
            android:background="@null"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:imeOptions="actionDone"
            style="@style/Text.Input.Search" />

    </FrameLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/top_bar_height" />

</com.tribe.app.presentation.view.component.settings.SettingsBlockedHiddenView>