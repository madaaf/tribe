<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@drawable/selectable_button_light"
    android:clickable="true"
    >

  <ImageView
      android:id="@+id/imgAvatarEmpty"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:layout_marginStart="23dp"
      android:background="@drawable/bg_empty_podium_avatar"
      android:padding="2dp"
      android:scaleType="centerInside"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

  <ImageView
      android:id="@+id/imgRankingEmpty"
      android:layout_width="25dp"
      android:layout_height="25dp"
      android:layout_marginStart="@dimen/horizontal_margin_small"
      android:scaleType="centerInside"
      android:src="@drawable/bg_empty_podium_ranking"
      app:layout_constraintBottom_toTopOf="@+id/imgEmptyName"
      app:layout_constraintStart_toEndOf="@id/imgAvatarEmpty"
      app:layout_constraintTop_toTopOf="@id/imgAvatarEmpty"
      app:layout_constraintVertical_chainStyle="packed"
      />

  <ImageView
      android:id="@+id/imgEmptyName"
      android:layout_width="86dp"
      android:layout_height="11dp"
      android:layout_marginStart="@dimen/horizontal_margin_small"
      android:layout_marginTop="4dp"
      android:scaleType="centerInside"
      android:src="@drawable/bg_empty_podium_name"
      app:layout_constraintBottom_toBottomOf="@id/imgAvatarEmpty"
      app:layout_constraintStart_toEndOf="@id/imgAvatarEmpty"
      app:layout_constraintTop_toBottomOf="@id/imgRankingEmpty"
      />

  <ImageView
      android:id="@+id/imgEmptyScore"
      android:layout_width="64dp"
      android:layout_height="30dp"
      android:layout_marginEnd="@dimen/horizontal_margin_small"
      android:scaleType="centerInside"
      android:src="@drawable/bg_empty_podium_score"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

  <ImageView
      android:id="@+id/imgConnectBottom"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="15dp"
      android:src="@drawable/picto_connect_old"
      app:layout_constraintEnd_toEndOf="@id/imgAvatarEmpty"
      app:layout_constraintStart_toStartOf="@id/imgAvatarEmpty"
      app:layout_constraintTop_toBottomOf="@id/imgAvatarEmpty"
      />

  <ImageView
      android:id="@+id/imgConnectTop"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="15dp"
      android:src="@drawable/picto_connect_old"
      app:layout_constraintBottom_toTopOf="@id/imgAvatarEmpty"
      app:layout_constraintEnd_toEndOf="@id/imgAvatarEmpty"
      app:layout_constraintStart_toStartOf="@id/imgAvatarEmpty"
      />
</android.support.constraint.ConstraintLayout>