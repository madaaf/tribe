<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@android:color/white">

    <com.tribe.app.presentation.view.widget.TextViewFont
        android:id="@+id/txtAccessTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/onboarding_top_bar_height"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_rect_profile_info_background_w_border"
        android:text="@string/access_rad_get_access_now"
        android:gravity="center"
        style="@style/Headline.Black"/>

    <com.tribe.app.presentation.view.widget.TextViewFont
        android:id="@+id/txtAccessDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginStart="@dimen/horizontal_margin_xlarge"
        android:layout_marginEnd="@dimen/horizontal_margin_xlarge"
        android:layout_marginBottom="112dp"
        android:background="@null"
        android:text="@string/access_a_friend_from_your_address_book_has_to_be_there_to_enter"
        android:gravity="center"
        style="@style/Headline.Black.40"
        />

    <com.tribe.app.presentation.view.widget.TextViewFont
        android:id="@+id/txtAccessTry"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_bar_height"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@color/blue.text"
        android:text="@string/access_try_to_enter"
        android:gravity="center"
        android:clickable="true"
        style="@style/Title.2.White"
        />

    <com.tribe.app.presentation.view.component.AccessLockView
        android:id="@+id/accessLockView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        />

    <com.tribe.app.presentation.view.component.TextFriendsView
        android:id="@+id/textFriendsView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="98dp"
        android:visibility="invisible"
        android:clickable="true"
        />
    
    <ImageView
        android:id="@+id/imgRedFb"
        android:layout_width="@dimen/icons_end"
        android:layout_height="@dimen/icons_end"
        android:layout_gravity="bottom|end"
        android:scaleType="centerInside"
        android:background="@color/blue.opaque"
        android:src="@drawable/picto_facebook_icon_red"
        android:visibility="invisible"
        />

</FrameLayout>