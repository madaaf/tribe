<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    >

    <LinearLayout
        android:id="@+id/layoutDummy"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:focusable="true">
        <requestFocus/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:background="@android:color/white"
        >

        <ImageView
            android:id="@+id/searchIconImageView"
            android:layout_width="@dimen/icons_end"
            android:layout_height="@dimen/icons_end"
            android:layout_gravity="center_vertical"
            android:scaleType="centerInside"
            android:src="@drawable/picto_search_icon"
            />

        <com.tribe.app.presentation.view.widget.EditTextFont
            android:id="@+id/editTextSearchContact"
            android:layout_width="match_parent"
            android:layout_height="@dimen/icons_end"
            android:layout_marginStart="@dimen/icons_end"
            android:layout_marginEnd="@dimen/icons_end"
            android:layout_gravity="center_vertical"
            android:hint="@string/contacts_search_placeholder"
            android:backgroundTint="@android:color/black"
            android:background="@null"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:imeOptions="actionDone"
            style="@style/Text.Input.Search"
            />

        <ImageView
            android:id="@+id/btnCloseSearch"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_marginRight="5dp"
            android:layout_gravity="right|center_vertical"
            android:scaleType="centerInside"
            android:src="@drawable/picto_close_search"
            android:background="@drawable/selectable_button_oval"
            />

    </FrameLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewContacts"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/top_bar_height"
        android:background="@android:color/white"
        />

    <View
        android:id="@+id/viewShadowTop"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_gravity="top"
        android:layout_marginTop="@dimen/top_bar_height"
        android:background="@drawable/shadow_bottom"
        />

</FrameLayout>