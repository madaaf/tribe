<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_notification_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    >

  <LinearLayout
      android:id="@+id/view_live_notification_container"
      android:background="@android:color/black"
      android:clickable="true"
      android:orientation="vertical"
      tools:visibility="visible"
      style="@style/AlertStyle"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginEnd="@dimen/alerter_activity_horizontal_margin"
        android:layout_marginStart="@dimen/alerter_activity_horizontal_margin"
        android:layout_marginTop="@dimen/alerter_padding_default"
        >

      <com.tribe.app.presentation.view.widget.avatar.AvatarLiveView
          android:id="@+id/avatar"
          android:layout_width="@dimen/avatar_size_medium"
          android:layout_height="@dimen/avatar_size_medium"
          android:layout_marginEnd="@dimen/alerter_activity_horizontal_margin"
          tools:src="@android:drawable/ic_menu_info_details"
          />

      <com.tribe.app.presentation.view.widget.TextViewFont
          android:id="@+id/tvTitle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:textColor="@android:color/white"
          tools:text="Title"
          tools:visibility="visible"
          />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_live_notification_action_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:orientation="vertical"
        >

    </LinearLayout>
  </LinearLayout>

</LinearLayout>
