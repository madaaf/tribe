<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@null"
    android:orientation="vertical"
    tools:context=".presentation.view.activity.LiveActivity"
    >

  <com.tribe.app.presentation.view.component.live.LiveContainer
      android:id="@+id/viewLiveContainer"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@null"
      >

    <com.tribe.app.presentation.view.component.live.LiveInviteView
        android:id="@+id/viewInviteLive"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        />

    <com.tribe.app.presentation.view.component.live.LiveView
        android:id="@+id/viewLive"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        />

    <View
        android:id="@+id/viewShadowRight"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_marginRight="-10dp"
        android:background="@drawable/shadow_right"
        />

    <com.tribe.app.presentation.view.widget.PopupContainerView
        android:id="@+id/nativeDialogsView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />


  </com.tribe.app.presentation.view.component.live.LiveContainer>

  <com.tribe.app.presentation.view.widget.TextViewFont
      android:id="@+id/remotePeerAdded"
      android:layout_width="match_parent"
      android:layout_height="@dimen/top_bar_notification_height_small"
      android:background="@android:color/black"
      android:gravity="center"
      android:textColor="@android:color/white"
      android:visibility="gone"
      />


  <View
      android:id="@+id/viewBGScreenshot"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/black.opacity.70"
      android:visibility="gone"
      />

  <ImageView
      android:id="@+id/viewScreenShot"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_gravity="center"
      android:alpha="0"
      android:gravity="center"
      />

  <FrameLayout
      android:id="@+id/viewFlash"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_gravity="top"
      android:alpha="0"
      android:background="@android:color/white"
      android:gravity="top"
      />


  <LinearLayout
      android:id="@+id/layoutScreenShotControls"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="bottom"
      android:orientation="vertical"
      android:padding="30dp"
      android:visibility="invisible"
      >
    <com.tribe.app.presentation.view.widget.TextViewFont
        android:id="@+id/txtShareScreenshot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:text="@string/live_share_screenshot_description"
        android:textSize="19sp"
        style="@style/Title.2.White"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

      <ImageView
          android:id="@+id/btnShareScreenshot"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:src="@drawable/share_btn_screenshot"
          />
      <ImageView
          android:id="@+id/btnCloseScreenshot"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"
          android:layout_toStartOf="@+id/btnShareScreenshot"
          android:paddingRight="20dp"
          android:src="@drawable/close_btn_screenshot"
          />
    </RelativeLayout>


  </LinearLayout>


  <com.tribe.app.presentation.view.widget.notifications.UserInfosNotificationView
      android:id="@+id/userInfosNotificationView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:clickable="true"
      android:visibility="gone"
      />

</FrameLayout>
