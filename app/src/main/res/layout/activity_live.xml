<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@null"
    android:orientation="vertical"
    tools:context=".presentation.view.activity.LiveActivity"
    >

  <com.tribe.app.presentation.view.component.live.LiveContainer
      android:id="@+id/viewLiveContainer"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@null"
      >

    <com.tribe.app.presentation.view.component.live.LiveInviteView
        android:id="@+id/viewInviteLive"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        />

    <com.tribe.app.presentation.view.component.live.LiveView
        android:id="@+id/viewLive"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        />

    <View
        android:id="@+id/viewShadowRight"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_marginRight="-10dp"
        android:background="@drawable/shadow_right"
        />

  </com.tribe.app.presentation.view.component.live.LiveContainer>

  <com.tribe.app.presentation.view.widget.LiveNotificationContainer
      android:id="@+id/layoutNotifications"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_gravity="top"
      android:visibility="gone"
      >

  </com.tribe.app.presentation.view.widget.LiveNotificationContainer>
</FrameLayout>
