<?xml version="1.0" encoding="utf-8"?>
<com.tribe.app.presentation.view.widget.SquareLinearLayout
    android:id="@+id/layoutContent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/btnSettings"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clickable="true"
        android:background="@drawable/selectable_button"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="@dimen/avatar_size_small"
            android:layout_height="@dimen/avatar_size_small"
            android:layout_marginLeft="@dimen/horizontal_margin_small"
            android:layout_centerVertical="true"
            android:background="@null"
            />

        <com.tribe.app.presentation.view.widget.TextViewFont
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imgAvatar"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/horizontal_margin_small"
            android:layout_marginRight="@dimen/horizontal_margin_small"
            android:gravity="center_vertical"
            android:singleLine="false"
            android:maxLines="2"
            style="@style/Title.2.Black"
            />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignLeft="@id/imgAvatar"
            android:layout_alignTop="@id/imgAvatar"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_oval_white"
            android:src="@drawable/picto_settings"
            android:scaleType="centerInside"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey.light"
        />

    <RelativeLayout
        android:id="@+id/layoutPoints"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/selectable_button"
        android:clickable="true">

        <ImageView
            android:id="@+id/imgLevel"
            android:layout_width="@dimen/avatar_size_small"
            android:layout_height="@dimen/avatar_size_small"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/horizontal_margin_small"
            android:src="@drawable/picto_legend"
            android:scaleType="centerInside"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imgLevel"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/horizontal_margin_small"
            android:orientation="vertical">

            <com.tribe.app.presentation.view.widget.TextViewFont
                android:id="@+id/txtPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                style="@style/Points.Reg.Yellow"
                android:text="1000"
                />

            <com.tribe.app.presentation.view.widget.TextViewFont
                android:id="@+id/txtPointsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:singleLine="true"
                android:text="@string/Grid.Me.Points"
                style="@style/Points.Reg.Yellow"
                />

        </LinearLayout>
    </RelativeLayout>
</com.tribe.app.presentation.view.widget.SquareLinearLayout>