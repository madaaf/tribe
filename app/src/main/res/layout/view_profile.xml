<?xml version="1.0" encoding="utf-8"?>
<com.tribe.app.presentation.view.component.profile.ProfileView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    tools:context=".presentation.view.activity.ProfileActivity"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@null"
      android:orientation="vertical"
      >

    <FrameLayout
        android:id="@+id/viewShareProfile"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_share_profile_height"
        android:background="@color/grey.background.profile_info"
        android:clickable="true"
        android:foreground="@drawable/selectable_button"
        android:orientation="horizontal"
        >

      <FrameLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="left|center_vertical"
          android:layout_margin="@dimen/horizontal_margin_small"
          android:gravity="center"
          >

        <View
            android:id="@+id/viewShadowAvatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_avatar_shadow"
            />

        <com.tribe.app.presentation.view.widget.avatar.AvatarView
            android:id="@+id/avatar"
            android:layout_width="@dimen/nav_icon_size"
            android:layout_height="@dimen/nav_icon_size"
            android:layout_gravity="center"
            android:background="@null"
            />
      </FrameLayout>

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_marginEnd="@dimen/nav_icon_size_with_margin_end"
          android:layout_marginStart="@dimen/nav_icon_size_with_margin_start"
          >

        <com.tribe.app.presentation.view.widget.TextViewFont
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            style="@style/Body.Two.Black"
            />

        <com.tribe.app.presentation.view.widget.TextViewFont
            android:id="@+id/txtUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtName"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            style="@style/Body.One.Blue.New"
            />
      </RelativeLayout>

      <ImageView
          android:id="@+id/btnShare"
          android:layout_width="@dimen/nav_icon_size"
          android:layout_height="@dimen/nav_icon_size"
          android:layout_gravity="right|center_vertical"
          android:background="@drawable/selectable_button_oval"
          android:clickable="true"
          android:scaleType="centerInside"
          android:src="@drawable/picto_share_profile"
          />
    </FrameLayout>

    <include layout="@layout/view_separator_simple" />

    <com.tribe.app.presentation.view.component.ActionView
        android:id="@+id/viewActionProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        app:actionTitle="@string/profile_user_infos"
        app:actionType="hierarchy"
        />

    <include layout="@layout/view_separator_simple" />

    <com.tribe.app.presentation.view.component.ActionView
        android:id="@+id/viewActionVisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        app:actionTitle="@string/profile_invisible_mode"
        app:actionType="toggle"
        />

    <include layout="@layout/view_separator_simple" />

    <com.tribe.app.presentation.view.component.ActionView
        android:id="@+id/viewActionRateUs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        app:actionTitle="@string/profile_rate_us"
        app:actionType="regular"
        />

    <include layout="@layout/view_separator_simple" />

    <com.tribe.app.presentation.view.component.ActionView
        android:id="@+id/viewActionFollow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        app:actionTitle="@string/profile_follow_us"
        app:actionType="regular"
        />

    <include layout="@layout/view_separator_simple" />

    <com.tribe.app.presentation.view.component.ActionView
        android:id="@+id/viewActionLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        app:actionTitle="@string/profile_logout"
        app:actionType="regular"
        />

    <include layout="@layout/view_separator_simple" />
  </LinearLayout>

  <ImageView
      android:id="@+id/imgLogo"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal|bottom"
      android:layout_marginBottom="@dimen/top_bar_height_small"
      android:src="@drawable/picto_tribe_logo_black"
      />

  <com.tribe.app.presentation.view.widget.TextViewFont
      android:id="@+id/txtVersion"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal|bottom"
      android:layout_marginBottom="@dimen/vertical_margin"
      android:clickable="true"
      android:gravity="center"
      style="@style/Body.One.Black40"
      />
</com.tribe.app.presentation.view.component.profile.ProfileView>