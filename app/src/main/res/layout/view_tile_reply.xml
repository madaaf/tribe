<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <com.tribe.app.presentation.view.widget.TextViewFont
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Body.Two.White"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="@dimen/vertical_margin_small"
        />

    <com.tribe.app.presentation.view.widget.TextViewFont
        android:id="@+id/txtStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Text.Grid.Status"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="@dimen/vertical_margin_small"
        android:text="@string/Tribe.Reply.Hint"
        />

    <com.tribe.app.presentation.view.widget.TextViewFont
        android:id="@+id/txtSending"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="15dp"
        android:text="@string/Grid.User.Sending"
        style="@style/Caption.White.1"
        android:alpha="0"
        />

    <View
        android:id="@+id/viewShadow"
        android:layout_height="@dimen/avatar_size_with_shadow"
        android:layout_width="@dimen/avatar_size_with_shadow"
        android:layout_gravity="center"
        android:background="@drawable/shadow_circle"
        />

    <com.tribe.app.presentation.view.widget.AvatarView
        android:id="@+id/avatar"
        android:layout_width="@dimen/avatar_size"
        android:layout_height="@dimen/avatar_size"
        android:layout_gravity="center"
        android:background="@null"
        />

    <com.tribe.app.presentation.view.widget.PlayerView
        android:id="@+id/viewPlayer"
        android:layout_width="@dimen/avatar_size_intermediate"
        android:layout_height="@dimen/avatar_size_intermediate"
        android:layout_gravity="center"
        />

    <View
        android:id="@+id/viewForeground"
        android:layout_width="@dimen/avatar_size_inner"
        android:layout_height="@dimen/avatar_size_inner"
        android:layout_gravity="center"
        android:background="@drawable/shape_ring_foreground_white"
        android:alpha="0"
        />

    <ImageView
        android:id="@+id/imgCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:scaleType="centerInside"
        android:src="@drawable/picto_cancel"
        android:scaleX="0"
        android:scaleY="0"
        />

    <ImageView
        android:id="@+id/imgDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:scaleType="centerInside"
        android:src="@drawable/picto_done"
        android:scaleX="0"
        android:scaleY="0"
        />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="@dimen/avatar_size"
        android:layout_height="@dimen/avatar_size"
        android:layout_gravity="center"
        android:max="@integer/time_tap_to_cancel"
        android:progress="0"
        android:progressDrawable="@drawable/progress_circular"
        />
</merge>