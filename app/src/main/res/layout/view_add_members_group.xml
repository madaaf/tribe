<?xml version="1.0" encoding="utf-8"?>
<com.tribe.app.presentation.view.component.group.AddMembersGroupView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.view.activity.GroupActivity"
    android:background="@null"
    >

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@null"
        >

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="156dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            android:fitsSystemWindows="true"
            app:elevation="0dp"
            android:background="@null"
            app:layout_behavior="com.tribe.app.presentation.view.widget.FlingBehavior"
            >
            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                android:fitsSystemWindows="true"
                app:contentScrim="@null"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0"
                    >
                    <com.tribe.app.presentation.view.component.ActionView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        app:actionTitle="@string/group_details_settings_title"
                        app:actionBody="@string/group_details_settings_subtitle"
                        app:actionType="hierarchy"
                        />

                    <include layout="@layout/view_separator" />

                    <com.tribe.app.presentation.view.component.ActionView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        app:actionTitle="@string/group_details_send_link"
                        app:actionType="sharing"
                        />

                    <include layout="@layout/view_separator" />
                </LinearLayout>
            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:clipToPadding="false"
            android:background="@color/green.group"
            />

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:layout_gravity="fill_vertical"
            android:background="@null"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/top_bar_height"
                    android:background="@android:color/white"
                    >

                    <ImageView
                        android:id="@+id/imgSearch"
                        android:layout_width="@dimen/icons_end"
                        android:layout_height="@dimen/icons_end"
                        android:layout_gravity="center_vertical"
                        android:scaleType="centerInside"
                        android:src="@drawable/picto_search_icon"
                        />

                    <com.tribe.app.presentation.view.widget.EditTextFont
                        android:id="@+id/editTextSearchContact"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/icons_end"
                        android:layout_marginStart="@dimen/icons_end"
                        android:layout_marginEnd="@dimen/icons_end"
                        android:layout_gravity="center_vertical"
                        android:hint="@string/group_add_members_search_placeholder"
                        android:backgroundTint="@android:color/black"
                        android:background="@null"
                        android:singleLine="true"
                        android:gravity="center_vertical"
                        android:imeOptions="actionDone"
                        style="@style/Title.1.Black"
                        />

                </FrameLayout>

                <RelativeLayout
                    android:id="@+id/layoutMembers"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@color/red"
                    >

                </RelativeLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:focusableInTouchMode="true"
            android:focusable="true"
            >
            <requestFocus/>
        </LinearLayout>

    </android.support.design.widget.CoordinatorLayout>
</com.tribe.app.presentation.view.component.group.AddMembersGroupView>