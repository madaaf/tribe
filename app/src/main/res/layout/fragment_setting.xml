<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollSetting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_rect_background_grey_rounded_bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_white_rect_grey_border"
            android:orientation="vertical">

            <com.tribe.app.presentation.view.component.SettingItemView
                android:id="@+id/settingsProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_white_rect_grey_border"
                android:paddingTop="@dimen/section_button_vertical_padding" />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/grey.background.profile_info" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_white_rect_grey_border"
                android:orientation="vertical">

                <com.tribe.app.presentation.view.component.SettingFilterView
                    android:id="@+id/settingsFilter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/grey.background.profile_info" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_white_rect_grey_border"
                android:orientation="vertical">

                <com.tribe.app.presentation.view.component.SettingThemeView
                    android:id="@+id/settingsTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/section_button_vertical_padding" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/grey.background.profile_info" />

            <com.tribe.app.presentation.view.component.SettingItemView
                android:id="@+id/messageSettingMemories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/section_button_vertical_padding" />

            <com.tribe.app.presentation.view.component.SettingItemView
                android:id="@+id/messageSettingContext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.tribe.app.presentation.view.component.SettingItemView
                android:id="@+id/messageSettingVoice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.tribe.app.presentation.view.component.SettingItemView
                android:id="@+id/messageSettingPreload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.tribe.app.presentation.view.component.SettingItemView
                android:id="@+id/messageSettingFahrenheit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/section_button_vertical_padding"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/grey.background.profile_info" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_white_rect_grey_border"
            android:orientation="vertical"
            >

            <com.tribe.app.presentation.view.component.SettingItemView
                android:id="@+id/settingsFacebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/section_button_vertical_padding"
                 />

            <com.tribe.app.presentation.view.component.SettingItemView
                android:id="@+id/settingsAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/section_button_vertical_padding"
                 />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/grey.background.profile_info" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_white_rect_grey_border"
            android:orientation="vertical">

            <com.tribe.app.presentation.view.component.SettingItemView
                android:paddingTop="@dimen/section_button_vertical_padding"
                android:paddingBottom="@dimen/section_button_vertical_padding"
                android:id="@+id/settingsInvisible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/grey.background.profile_info" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_white_rect_grey_border"
            android:orientation="vertical">

            <com.tribe.app.presentation.view.component.SettingItemView
                android:id="@+id/settingsTweet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/section_button_vertical_padding"
                />

            <com.tribe.app.presentation.view.component.SettingItemView
                android:id="@+id/settingsEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <com.tribe.app.presentation.view.component.SettingItemView
                android:id="@+id/settingsRateApp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/section_button_vertical_padding"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/grey.background.profile_info" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_white_rect_grey_border"
            android:orientation="vertical">

            <com.tribe.app.presentation.view.component.SettingItemView
                android:id="@+id/settingsBlocked"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/section_button_vertical_padding"
                android:paddingBottom="@dimen/section_button_vertical_padding"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/grey.background.profile_info" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_white_rect_grey_border"
            android:orientation="vertical">

            <com.tribe.app.presentation.view.component.SettingItemView
                android:id="@+id/settingsLogOut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/section_button_vertical_padding"
                android:paddingBottom="@dimen/section_button_vertical_padding"
               />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutDebugMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_white_rect_grey_border"
            android:orientation="vertical"
            android:visibility="gone">

            <com.tribe.app.presentation.view.component.SettingItemView
                android:id="@+id/settingsDebugMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/section_button_vertical_padding"
                android:paddingBottom="@dimen/section_button_vertical_padding"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_size"
                android:background="@color/grey.light"
                />

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/vertical_margin"
            android:layout_marginBottom="@dimen/vertical_margin"
            android:src="@drawable/picto_tribe_logo_black"
            android:alpha="0.4"
            />

        <com.tribe.app.presentation.view.widget.TextViewFont
            android:id="@+id/txtVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/vertical_margin"
            android:gravity="center"
            android:clickable="true"
            style="@style/Body.One.Black40"
            />

    </LinearLayout>

</ScrollView>