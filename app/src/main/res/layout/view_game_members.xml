<?xml version="1.0" encoding="utf-8"?>
<com.tribe.app.presentation.view.component.games.GamesMembersView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:fillViewport="true"
    tools:context=".presentation.view.activity.NewGameActivity"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:minHeight="55dp"
      android:orientation="horizontal"
      >

    <com.tribe.app.presentation.view.widget.TextViewFont
        android:id="@+id/txtTo"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/horizontal_margin"
        android:gravity="top|start"
        android:maxLines="1"
        android:text="@string/newchat_to"
        android:textAllCaps="true"
        style="@style/Title.2.Black40"
        />

    <com.tribe.app.presentation.view.component.chat.ShortcutCompletionView
        android:id="@+id/viewShortcutCompletion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="12.5dp"
        android:layout_marginBottom="15dp"
        android:background="@null"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:imeOptions="actionDone"
        android:inputType="text|textNoSuggestions|textMultiLine"
        android:minHeight="30dp"
        android:textColor="@android:color/black"
        android:textSize="11dp"

        />
  </LinearLayout>

  <View
      android:layout_width="match_parent"
      android:layout_height="@dimen/divider_size"
      android:background="@color/grey.light"
      />

  <android.support.v7.widget.RecyclerView
      android:id="@+id/recyclerViewShortcuts"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@null"
      android:scrollbars="vertical"
      />

</com.tribe.app.presentation.view.component.games.GamesMembersView>