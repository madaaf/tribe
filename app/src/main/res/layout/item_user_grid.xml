<?xml version="1.0" encoding="utf-8"?><!--suppress Annotator -->
<com.tribe.app.presentation.view.widget.SquareFrameLayout
    android:id="@+id/layoutContent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.tribe.app.presentation.view.widget.TextViewFont
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Text.Grid.Name"
        android:layout_gravity="top|left"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="35dp"
        />
    
    <ImageView
        android:id="@+id/btnText"
        android:layout_width="@dimen/button_size"
        android:layout_height="@dimen/button_size"
        android:src="@drawable/picto_text"
        android:scaleType="centerInside"
        android:layout_gravity="bottom|right"
        android:background="@drawable/shape_rect_rounded_bottom_right"
        />

    <ImageView
        android:id="@+id/btnMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/picto_more"
        android:scaleType="centerInside"
        android:layout_gravity="top|right"
        android:layout_marginRight="15dp"
        android:layout_marginTop="17dp"
        />

    <com.tribe.app.presentation.view.widget.TextViewFont
        android:id="@+id/txtStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Text.Grid.Status"
        android:layout_gravity="bottom|left"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="60dp"
        android:drawableLeft="@drawable/picto_to_send"
        android:drawablePadding="8dp"
        android:text="@string/tap.to.send"
        />

</com.tribe.app.presentation.view.widget.SquareFrameLayout>