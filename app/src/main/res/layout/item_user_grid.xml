<?xml version="1.0" encoding="utf-8"?>
<com.tribe.app.presentation.view.widget.SquareFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutContent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.tribe.app.presentation.view.widget.TextViewFont
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Text.Grid.Name"
        android:layout_gravity="top|left"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="35dp"
        />
    
    <ImageView
        android:id="@+id/btnText"
        android:layout_width="@dimen/button_size"
        android:layout_height="@dimen/button_size"
        android:src="@drawable/picto_text"
        android:scaleType="centerInside"
        android:layout_gravity="bottom|right"
        android:background="@drawable/selectable_button_text_mode"
        android:clickable="true"
        />

    <ImageView
        android:id="@+id/btnMore"
        android:layout_width="@dimen/button_size"
        android:layout_height="@dimen/button_size"
        android:src="@drawable/picto_more"
        android:scaleType="centerInside"
        android:layout_gravity="top|right"
        android:background="@drawable/selectable_button_oval"
        />

    <com.tribe.app.presentation.view.widget.TextViewFont
        android:id="@+id/txtStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Text.Grid.Status"
        android:layout_gravity="bottom|left"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="60dp"
        android:drawableLeft="@drawable/picto_to_send"
        android:drawablePadding="8dp"
        android:text="@string/tap.to.send"
        />

    <com.tribe.app.presentation.view.widget.AvatarView
        android:id="@+id/avatar"
        android:layout_width="@dimen/avatar_size"
        android:layout_height="@dimen/avatar_size"
        android:layout_gravity="center"
        android:background="@null"
        />

    <View
        android:id="@+id/viewForeground"
        android:layout_width="@dimen/avatar_size_inner"
        android:layout_height="@dimen/avatar_size_inner"
        android:layout_gravity="center"
        android:background="@drawable/shape_ring_foreground_white"
        />

    <ImageView
        android:id="@+id/imgCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:scaleType="centerInside"
        android:src="@drawable/picto_cancel"
        android:scaleX="0"
        android:scaleY="0"
        />

    <ImageView
        android:id="@+id/imgDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:scaleType="centerInside"
        android:src="@drawable/picto_done"
        android:scaleX="0"
        android:scaleY="0"
        />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="@dimen/avatar_size"
        android:layout_height="@dimen/avatar_size"
        android:layout_gravity="center"
        android:max="@integer/time_tap_to_cancel"
        android:progress="0"
        android:progressDrawable="@drawable/progress_circular"
        />

    <View
        android:id="@+id/viewPressedForeground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/shape_rectangle_border_black_opacity"
        />
</com.tribe.app.presentation.view.widget.SquareFrameLayout>