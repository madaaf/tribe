<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutContent"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:background="@null"
    android:clickable="true"
    android:foreground="@drawable/selectable_button"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/horizontal_margin_small"
    android:paddingRight="@dimen/horizontal_margin_small"
    android:animateLayoutChanges="true"
    >

  <include layout="@layout/item_user_base" />

  <FrameLayout
      android:id="@+id/btnAdd"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical|right"
      android:background="@drawable/shape_rect_rounded_100_violet"
      android:paddingTop="@dimen/horizontal_margin_smaller"
      android:paddingBottom="@dimen/horizontal_margin_smaller"
      android:paddingLeft="@dimen/horizontal_margin_small"
      android:paddingRight="@dimen/horizontal_margin_small"
      android:foreground="@drawable/selectable_button_all_rounded_100_white_10"
      android:clickable="true"
      android:animateLayoutChanges="true"
      >

    <com.tribe.app.presentation.view.widget.TextViewFont
        android:id="@+id/txtAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:maxLines="1"
        android:text="@string/group_add_members_in_group"
        style="@style/Body.Two.White"
        />
  </FrameLayout>
</FrameLayout>