<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_home_header_height"
    android:background="@null"
    android:orientation="horizontal"
    >

  <ImageView
      android:id="@+id/imgPicto"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:layout_marginStart="@dimen/horizontal_margin_small"
      android:scaleType="centerInside"
      android:src="@drawable/picto_header_ongoing"
      />

  <com.tribe.app.presentation.view.widget.TextViewFont
      android:id="@+id/txtLabel"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:layout_marginStart="8dp"
      android:maxLines="1"
      android:textAllCaps="true"
      style="@style/Body.Two.White"
      />
</LinearLayout>