<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:orientation="vertical"
    android:gravity="left">

    <include layout="@layout/item_text_base" />

    <FrameLayout
        android:id="@+id/layoutContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2.5dp"
        android:layout_marginStart="@dimen/horizontal_left_margin_chat"
        android:layout_marginEnd="@dimen/horizontal_margin_small">

        <com.tribe.app.presentation.view.widget.TextViewFont
            android:id="@+id/txtMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/horizontal_margin_small"
            android:padding="@dimen/horizontal_margin_small"
            android:background="@drawable/shape_rounded_link"
            android:textColorLink="@color/blue.facebook"
            android:autoLink="web"
            style="@style/Title.1.Facebook"
            />

        <include layout="@layout/item_text_status" />

    </FrameLayout>
</LinearLayout>
