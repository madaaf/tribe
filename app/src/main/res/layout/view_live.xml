<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

  <com.tribe.app.presentation.view.component.live.LiveHangUpView
      android:id="@+id/viewLiveHangUp"
      android:layout_width="75dp"
      android:layout_height="match_parent"
      android:layout_gravity="left"
      />

  <com.tribe.app.presentation.view.component.live.LiveInviteView
      android:id="@+id/viewLiveInvite"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_gravity="end"
      android:visibility="visible"
      />

  <View
      android:id="@+id/viewShadowRight"
      android:layout_width="10dp"
      android:layout_height="match_parent"
      android:layout_gravity="end"
      android:layout_marginEnd="-10dp"
      android:background="@drawable/shadow_right"
      />

  <View
      android:id="@+id/viewShadowLeft"
      android:layout_width="10dp"
      android:layout_height="match_parent"
      android:layout_gravity="start"
      android:layout_marginStart="-10dp"
      android:background="@drawable/shadow_left"
      />

  <com.tribe.app.presentation.view.component.live.LiveRoomView
      android:id="@+id/viewRoom"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@android:color/black"
      android:clickable="false"
      android:focusable="false"
      android:focusableInTouchMode="false"
      android:visibility="visible"
      />

  <LinearLayout
      android:id="@+id/layoutScoresOverLive"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:visibility="gone"
      android:layout_margin="@dimen/horizontal_margin">


  </LinearLayout>

  <com.tribe.app.presentation.view.component.live.LiveRingingView
      android:id="@+id/viewRinging"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_gravity="center"
      android:clickable="false"
      android:focusableInTouchMode="false"
      />

  <View
      android:id="@+id/viewDarkOverlay"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:alpha="0"
      android:background="@color/black.opacity.70"
      android:clickable="false"
      android:focusableInTouchMode="false"
      />

  <com.tribe.app.presentation.view.component.live.LiveControlsView
      android:id="@+id/viewControlsLive"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      />
</merge>