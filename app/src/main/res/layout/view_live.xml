<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

  <com.tribe.app.presentation.view.component.live.LiveRoomView
      android:id="@+id/viewRoom"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:animateLayoutChanges="true"
      android:background="@color/blue.2"
      android:configChanges="orientation|screenSize"
      >

  </com.tribe.app.presentation.view.component.live.LiveRoomView>

  <com.tribe.app.presentation.view.component.live.LiveControlsView
      android:id="@+id/viewControlsLive"
      android:layout_width="match_parent"
      android:layout_height="75dp"
      android:layout_gravity="bottom"
      />

  <com.tribe.app.presentation.view.widget.TextViewFont
      android:id="@+id/txtName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="top|center_horizontal"
      android:layout_margin="@dimen/horizontal_margin_small"
      android:background="@null"
      android:drawablePadding="8.6dp"
      android:shadowColor="@color/black.opacity.50"
      android:shadowRadius="5"
      android:singleLine="true"
      style="@style/Body.Two.White"
      />

  <com.tribe.app.presentation.view.component.live.BuzzView
      android:id="@+id/viewBuzz"
      android:layout_width="60dp"
      android:layout_height="60dp"
      android:visibility="gone"
      app:buzzType="small"
      />

  <ImageView
      android:id="@+id/btnLeave"
      android:layout_width="@dimen/nav_icon_size"
      android:layout_height="@dimen/nav_icon_size"
      android:layout_gravity="right|top"
      android:layout_margin="5dp"
      android:background="@drawable/selectable_button_oval"
      android:clickable="true"
      android:scaleType="centerInside"
      android:src="@drawable/picto_leave_live"
      />
</merge>