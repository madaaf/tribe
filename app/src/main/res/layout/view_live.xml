<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

  <com.tribe.app.presentation.view.component.live.LiveRoomView
      android:id="@+id/viewRoom"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:animateLayoutChanges="true"
      >

  </com.tribe.app.presentation.view.component.live.LiveRoomView>

  <com.tribe.app.presentation.view.component.live.LiveControlsView
      android:id="@+id/viewControlsLive"
      android:layout_width="match_parent"
      android:layout_height="75dp"
      android:layout_gravity="bottom"
      />

  <com.tribe.app.presentation.view.component.live.LiveStatusNameView
      android:id="@+id/viewStatusName"
      android:layout_width="match_parent"
      android:layout_height="100dp"
      android:layout_gravity="top|center_horizontal"
      android:layout_marginLeft="50dp"
      android:layout_marginRight="50dp"
      android:layout_marginTop="19.5dp"
      android:background="@null"
      />

  <com.tribe.app.presentation.view.component.live.BuzzView
      android:id="@+id/viewBuzz"
      android:layout_width="60dp"
      android:layout_height="60dp"
      android:visibility="gone"
      app:buzzType="small"
      />

  <ImageView
      android:id="@+id/btnLeave"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="right|top"
      android:layout_margin="9dp"
      android:background="@drawable/selectable_button_oval"
      android:clickable="true"
      android:scaleType="centerInside"
      android:src="@drawable/picto_leave_live"
      />

  <ImageView
      android:id="@+id/btnScreenshot"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="left|top"
      android:layout_margin="@dimen/horizontal_margin_smaller"
      android:alpha="0"
      android:background="@drawable/selectable_button_oval"
      android:clickable="true"
      android:scaleType="centerInside"
      android:src="@drawable/picto_btn_screenshot"
      android:visibility="invisible"
      />
</merge>