<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:minHeight="300dp"
    android:minWidth="@dimen/dialog_fragment_width"
    android:layout_height="300dp"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/shape_rect_white_rounded_corners"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@null"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgLevel"
            android:layout_width="@dimen/avatar_size"
            android:layout_height="@dimen/avatar_size"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/horizontal_margin_large"
            android:scaleType="centerInside"
            />

        <com.tribe.app.presentation.view.widget.TextViewFont
            android:id="@+id/txtPopupTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/vertical_margin_large"
            android:gravity="center"
            style="@style/Headline.Black.1"
            />

        <com.tribe.app.presentation.view.widget.TextViewFont
            android:id="@+id/txtPopupDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:lineSpacingExtra="2.5dp"
            android:gravity="center_horizontal"
            style="@style/Title.1.Black"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_bar_height"
        android:orientation="horizontal"
        android:layout_gravity="bottom">

        <com.tribe.app.presentation.view.widget.TextViewFont
            android:id="@+id/txtShare"
            style="@style/Title.2.White"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:foreground="@drawable/selectable_button_light"
            android:background="@color/blue.text"
            android:gravity="center"
            android:text="@string/newlevel_share"
            />

        <com.tribe.app.presentation.view.widget.TextViewFont
            android:id="@+id/txtDone"
            style="@style/Title.2.White"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:foreground="@drawable/selectable_button_light"
            android:background="@color/yellow"
            android:gravity="center"
            android:text="@string/newlevel_close"
            />

    </LinearLayout>
</FrameLayout>