<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:background="
    @android:color/white"
    >

  <LinearLayout
      android:id="@+id/header"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      >

    <com.tribe.app.presentation.view.widget.avatar.AvatarView
        android:id="@+id/viewAvatar"
        android:layout_width="@dimen/avatar_size_chat"
        android:layout_height="@dimen/avatar_size_chat"
        android:layout_gravity="left|center_vertical"
        android:background="@null"
        android:scaleType="centerCrop"
        app:hasHole="true"
        app:hasInd="true"
        app:hasShadow="false"
        />


    <com.tribe.app.presentation.view.widget.TextViewFont
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:text="mada"
        android:textAllCaps="true"
        android:textSize="11sp"
        style="@style/Body.Two.Black"
        />

    <com.tribe.app.presentation.view.widget.TextViewFont
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:text="1m ago"
        android:textSize="11sp"
        style="@style/Body.Two.Black40"
        />

  </LinearLayout>


  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginBottom="10dp"
      >

    <com.tribe.app.presentation.view.widget.TextViewFont
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        style="@style/Content.Three.Black"
        />

    <com.tribe.app.presentation.view.widget.TextViewFont
        android:id="@+id/emoji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textSize="70sp"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:visibility="gone"
        />


    <LinearLayout
        android:id="@+id/containerNotif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_rect_chat_notif"
        android:gravity="center"
        android:visibility="gone"
        >

      <com.tribe.app.presentation.view.widget.avatar.AvatarView
          android:id="@+id/viewAvatarNotif"
          android:layout_width="@dimen/avatar_size_chat"
          android:layout_height="@dimen/avatar_size_chat"
          android:layout_gravity="left|center_vertical"
          android:layout_marginStart="15dp"
          android:layout_marginEnd="15dp"
          android:background="@null"
          android:scaleType="centerCrop"
          app:hasHole="true"
          app:hasInd="true"
          app:hasShadow="false"
          />
      <ImageView
          android:id="@+id/videoCallBtn"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:scaleType="centerInside"
          android:src="@drawable/picto_chat_video_notif"
          />

      <com.tribe.app.presentation.view.widget.TextViewFont
          android:id="@+id/notifContent"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:padding="10dp"
          android:text="Anna joined live"
          android:textAllCaps="true"
          android:textSize="11sp"
          style="@style/Title.2.White"
          />

    </LinearLayout>

  </RelativeLayout>
</LinearLayout>