<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <LinearLayout
      android:id="@+id/layoutReq"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginEnd="@dimen/horizontal_margin_small"
      android:layout_marginStart="@dimen/horizontal_margin_small"
      android:gravity="center"
      android:orientation="horizontal"
      app:layout_constraintBottom_toTopOf="@+id/txtRequirement"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_chainStyle="packed"
      >

    <com.tribe.app.presentation.view.widget.TextViewFont
        android:id="@+id/txtReqDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Bigger.Circular.3.Black"
        />

    <com.tribe.app.presentation.view.widget.TextViewFont
        android:id="@+id/txtReqTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        style="@style/Headline.Circular.3.Black"
        />
  </LinearLayout>

  <com.tribe.app.presentation.view.widget.TextViewFont
      android:id="@+id/txtRequirement"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/vertical_margin_small"
      android:gravity="center"
      android:textAllCaps="true"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/layoutReq"
      app:layout_constraintBottom_toBottomOf="parent"
      style="@style/Body.Two.Black40"
      />

</merge>