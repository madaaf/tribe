<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:minHeight="312dp"
    android:minWidth="@dimen/dialog_fragment_width"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/shape_rect_white_rounded_corners"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/vertical_margin_large"
        android:gravity="center"
        android:text="@string/group_private_link_popup_title"
        style="@style/Headline.Black.1"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12.5dp"
        android:text="@string/group_private_link_popup_description"
        android:gravity="center"
        style="@style/Title.1.Black40"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_fragment_icon_size"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/vertical_margin"
        >
        <ImageView
            android:id="@+id/imageMessenger"
            android:layout_width="@dimen/dialog_fragment_icon_size"
            android:layout_height="match_parent"
            android:background="@drawable/shape_white_rect_grey_border"
            android:scaleType="centerInside"
            android:src="@drawable/picto_messenger"
            />
        <ImageView
            android:id="@+id/imageWhatsapp"
            android:layout_width="@dimen/dialog_fragment_icon_size"
            android:layout_height="match_parent"
            android:background="@drawable/shape_white_rect_grey_border"
            android:scaleType="centerInside"
            android:src="@drawable/picto_whatsapp"
            />
        <ImageView
            android:id="@+id/imageSnapchat"
            android:layout_width="@dimen/dialog_fragment_icon_size"
            android:layout_height="match_parent"
            android:background="@drawable/shape_white_rect_grey_border"
            android:scaleType="centerInside"
            android:src="@drawable/picto_snapchat"
            />
        <ImageView
            android:id="@+id/imageMessage"
            android:layout_width="@dimen/dialog_fragment_icon_size"
            android:layout_height="match_parent"
            android:background="@drawable/shape_white_rect_grey_border"
            android:scaleType="centerInside"
            android:src="@drawable/picto_message_icon"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_fragment_icon_size"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/imageSlack"
            android:layout_width="@dimen/dialog_fragment_icon_size"
            android:layout_height="match_parent"
            android:background="@drawable/shape_white_rect_grey_border"
            android:scaleType="centerInside"
            android:src="@drawable/picto_slack"
            />
        <ImageView
            android:id="@+id/imageTelegram"
            android:layout_width="@dimen/dialog_fragment_icon_size"
            android:layout_height="match_parent"
            android:background="@drawable/shape_white_rect_grey_border"
            android:scaleType="centerInside"
            android:src="@drawable/picto_telegram"
            />
        <ImageView
            android:id="@+id/imageMail"
            android:layout_width="@dimen/dialog_fragment_icon_size"
            android:layout_height="match_parent"
            android:background="@drawable/shape_white_rect_grey_border"
            android:scaleType="centerInside"
            android:src="@drawable/picto_mail"
            />
        <ImageView
            android:id="@+id/imageMore"
            android:layout_width="@dimen/dialog_fragment_icon_size"
            android:layout_height="match_parent"
            android:background="@drawable/shape_white_rect_grey_border"
            android:scaleType="centerInside"
            android:src="@drawable/picto_more_black"
            />
    </LinearLayout>

    <com.tribe.app.presentation.view.widget.TextViewFont
        android:id="@+id/textDone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_bar_height"
        android:gravity="center"
        android:text="@string/action_done"
        style="@style/Title.2.Black"
        />

</LinearLayout>