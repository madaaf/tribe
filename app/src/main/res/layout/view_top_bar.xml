<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imgAvatar"
        android:layout_width="@dimen/avatar_size_smaller"
        android:layout_height="@dimen/avatar_size_smaller"
        android:layout_gravity="left|center_vertical"
        android:layout_marginLeft="@dimen/horizontal_margin_small"
        android:background="@drawable/bg_top_bar_circle"
        android:scaleType="centerInside"
        android:clickable="true"
        android:foreground="@drawable/selectable_button_oval_light"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/horizontal_margin_small"
        android:layout_gravity="right|center_vertical"
        android:orientation="horizontal">

        <com.tribe.app.presentation.view.widget.TextViewFont
            android:id="@+id/btnNew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/picto_add_group"
            android:drawablePadding="7.5dp"
            android:padding="10dp"
            android:background="@drawable/selectable_button_all_rounded"
            android:text="@string/topbar_new_friend"
            android:singleLine="true"
            style="@style/Body.Two.White"
            android:clickable="true"
            />

    </LinearLayout>
</merge>