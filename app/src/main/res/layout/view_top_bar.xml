<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

  <RelativeLayout
      android:id="@+id/progressRefreshBack"
      android:layout_width="30dp"
      android:layout_height="30dp"
      android:layout_gravity="center"
      android:background="@drawable/shape_oval_white10"
      android:visibility="invisible"
      >

    <com.github.rahatarmanahmed.cpv.CircularProgressView
        android:id="@+id/progressRefresh"
        android:layout_width="17.5dp"
        android:layout_height="17.5dp"
        android:layout_gravity="center"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:alpha="0"
        android:background="@null"
        app:cpv_animAutostart="true"
        app:cpv_animDuration="3000"
        app:cpv_color="@android:color/white"
        app:cpv_indeterminate="true"
        app:cpv_thickness="2sp"
        />
  </RelativeLayout>
  <FrameLayout
      android:id="@+id/viewTopBarContainer"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"

      android:padding="10dp"
      >
    <com.tribe.app.presentation.view.widget.avatar.AvatarView
        android:id="@+id/viewAvatar"
        android:layout_width="@dimen/avatar_size_smaller"
        android:layout_height="@dimen/avatar_size_smaller"
        android:layout_gravity="left"
        android:layout_marginLeft="@dimen/horizontal_margin_small"
        android:clickable="true"
        android:foreground="@drawable/selectable_button_oval_light"
        android:scaleType="centerInside"
        app:avatarType="online"
        app:hasHole="true"
        app:hasInd="true"
        app:hasShadow="false"
        />

    <com.tribe.app.presentation.view.widget.TextViewFont
        android:id="@+id/btnInvite"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_gravity="right"
        android:background="@drawable/selectable_button_all_rounded_5_green"
        android:clickable="true"
        android:drawablePadding="8dp"
        android:drawableStart="@drawable/picto_hangouts"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:singleLine="true"
        android:text="@string/topbar_invite"
        style="@style/Body.Two.White"
        />

    <ImageView
        android:id="@+id/imgClose"
        android:layout_width="@dimen/avatar_size_smaller"
        android:layout_height="@dimen/avatar_size_smaller"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/horizontal_margin_small"
        android:background="@drawable/bg_top_bar_circle"
        android:clickable="true"
        android:foreground="@drawable/selectable_button_oval_light"
        android:scaleType="centerInside"
        android:src="@drawable/picto_search_close"
        />

    <FrameLayout
        android:id="@+id/btnSearch"
        android:layout_width="match_parent"
        android:layout_height="@dimen/avatar_size_smaller"
        android:background="@drawable/shape_rect_rounded_white_10"
        android:clickable="true"
        android:paddingLeft="@dimen/horizontal_margin_smaller"
        >

      <ImageView
          android:id="@+id/imgSearch"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:scaleType="centerInside"
          android:src="@drawable/picto_search_white"
          />

      <com.tribe.app.presentation.view.widget.EditTextFont
          android:id="@+id/editTextSearch"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginEnd="15dp"
          android:layout_marginStart="20dp"
          android:background="@null"
          android:gravity="center_vertical"
          android:hint="@string/topbar_search"
          android:imeOptions="actionDone"
          android:inputType="text|textVisiblePassword"
          android:singleLine="true"
          android:textColorHint="@color/white.opacity.40"
          android:textCursorDrawable="@drawable/cursor_white"
          style="@style/Body.Two.White"
          />

      <com.tribe.app.presentation.view.widget.TextViewFont
          android:id="@+id/txtNewContacts"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_gravity="end"
          android:layout_margin="4dp"
          android:alpha="0"
          android:background="@null"
          android:drawableEnd="@drawable/picto_new_contacts"
          android:drawablePadding="4dp"
          android:gravity="center"
          android:paddingLeft="6dp"
          android:paddingRight="6dp"
          style="@style/Title.2.White"
          />


      <FrameLayout
          android:id="@+id/btnSyncContacts"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="end|center_vertical"
          android:layout_margin="4dp"
          android:background="@drawable/shape_rect_orange_sync_corner"
          android:clickable="true"
          android:visibility="gone"
          >

        <ImageView
            android:id="@+id/imgSyncContacts"
            android:layout_width="@dimen/avatar_size_smaller"
            android:layout_height="@dimen/avatar_size_smaller"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/picto_synch_contacts"
            />
      </FrameLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/callRoulette"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginEnd="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/shape_rect_white_corner"
        android:gravity="center"
        android:clickable="true"
        >
      <ImageView
          android:layout_width="35dp"
          android:layout_height="35dp"
          android:layout_marginEnd="20dp"
          android:src="@drawable/shape_dice_with_border"
          />
      <com.tribe.app.presentation.view.widget.TextViewFont
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/roll_the_dice_grid_button"
          style="@style/Title.2.Black"
          />

    </LinearLayout>
  </FrameLayout>


</merge>