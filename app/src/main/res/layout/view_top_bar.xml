<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
  <FrameLayout
      android:id="@+id/viewTopBarContainer"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >
    <com.tribe.app.presentation.view.widget.avatar.AvatarView
        android:id="@+id/viewAvatar"
        android:layout_width="@dimen/avatar_size_smaller"
        android:layout_height="@dimen/avatar_size_smaller"
        android:layout_gravity="center_vertical|left"
        android:layout_marginLeft="@dimen/horizontal_margin_small"
        android:clickable="true"
        android:foreground="@drawable/selectable_button_oval_light"
        android:scaleType="centerInside"
        app:avatarType="online"
        app:hasHole="true"
        app:hasInd="true"
        app:hasShadow="false"
        />

    <com.tribe.app.presentation.view.widget.TextViewFont
        android:id="@+id/btnNew"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_gravity="right|center_vertical"
        android:background="@drawable/selectable_button_all_rounded_5_white"
        android:clickable="true"
        android:drawablePadding="7.5dp"
        android:drawableStart="@drawable/picto_new_call"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:singleLine="true"
        android:text="@string/topbar_new_call"
        style="@style/Body.Two.Black"
        />

    <ImageView
        android:id="@+id/imgClose"
        android:layout_width="@dimen/avatar_size_smaller"
        android:layout_height="@dimen/avatar_size_smaller"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="@dimen/horizontal_margin_small"
        android:background="@drawable/bg_top_bar_circle"
        android:clickable="true"
        android:foreground="@drawable/selectable_button_oval_light"
        android:scaleType="centerInside"
        android:src="@drawable/picto_search_close"
        />

    <FrameLayout
        android:id="@+id/btnSearch"
        android:layout_width="match_parent"
        android:layout_height="@dimen/avatar_size_smaller"
        android:layout_gravity="center_vertical|left"
        android:background="@drawable/shape_rect_rounded_white_10"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/horizontal_margin_smaller"
        >

      <ImageView
          android:id="@+id/imgSearch"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:scaleType="centerInside"
          android:src="@drawable/picto_search_white"
          />

      <com.tribe.app.presentation.view.widget.EditTextFont
          android:id="@+id/editTextSearch"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="15dp"
          android:background="@null"
          android:gravity="center_vertical"
          android:hint="@string/topbar_search"
          android:imeOptions="actionDone"
          android:inputType="text|textVisiblePassword"
          android:singleLine="true"
          android:textColorHint="@color/white.opacity.40"
          android:textCursorDrawable="@drawable/cursor_white"
          style="@style/Body.Two.White"
          />

      <com.tribe.app.presentation.view.widget.TextViewFont
          android:id="@+id/txtNewContacts"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_gravity="right"
          android:layout_margin="4dp"
          android:alpha="0"
          android:background="@null"
          android:drawableEnd="@drawable/picto_new_contacts"
          android:drawablePadding="4dp"
          android:gravity="center"
          android:paddingLeft="6dp"
          android:paddingRight="6dp"
          style="@style/Title.2.White"
          />
    </FrameLayout>

  </FrameLayout>

  <RelativeLayout
      android:id="@+id/progressRefreshBack"
      android:layout_width="30dp"
      android:layout_height="30dp"
      android:layout_gravity="center"
      android:background="@drawable/shape_oval_white10"
      android:visibility="invisible"
      >

    <com.github.rahatarmanahmed.cpv.CircularProgressView
        android:id="@+id/progressRefresh"
        android:layout_width="17.5dp"
        android:layout_height="17.5dp"
        android:layout_gravity="center"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:alpha="0"
        android:background="@null"
        app:cpv_animAutostart="true"
        app:cpv_animDuration="3000"
        app:cpv_color="@android:color/white"
        app:cpv_indeterminate="true"
        app:cpv_thickness="2sp"
        />
  </RelativeLayout>
</merge>