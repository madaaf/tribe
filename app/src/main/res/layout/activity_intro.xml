<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    >

    <com.tribe.app.presentation.view.widget.CustomViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        >

        <com.tribe.app.presentation.view.component.PhoneNumberView
            android:id="@+id/viewPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"
            android:gravity="center"
            android:background="@null"
            />

        <com.tribe.app.presentation.view.component.CodeView
            android:id="@+id/viewCode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"
            android:gravity="center"
            android:background="@null"
            />
    </com.tribe.app.presentation.view.widget.CustomViewPager>

    <com.tribe.app.presentation.view.widget.TextViewFont
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:background="@color/palette.two.two"
        android:text="@string/common_next"
        android:clickable="true"
        />

</FrameLayout>