<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <View
        android:id="@+id/pulse"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:background="@drawable/shape_circle_grey"
        android:layout_gravity="center"
        />

    <ImageView
        android:id="@+id/whiteCircle"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:background="@drawable/bg_oval_onboarding"
        android:layout_gravity="center"
        />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_gravity="center"
        android:max="@integer/time_synchro"
        android:progressDrawable="@drawable/progress_circular_synchro"
        />

    <LinearLayout
        android:id="@+id/layoutFriends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@null"
        android:orientation="vertical">

        <TextSwitcher
            android:id="@+id/txtNumFriends"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-15dp"
            android:inAnimation="@anim/slide_in_likes_counter"
            android:outAnimation="@anim/slide_out_likes_counter">

            <com.tribe.app.presentation.view.widget.TextViewFont
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center_horizontal"
                android:gravity="top|center_horizontal"
                style="@style/Giant.1.Black"
                android:text="1"
                />

            <com.tribe.app.presentation.view.widget.TextViewFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center_horizontal"
                android:gravity="top|center_horizontal"
                style="@style/Giant.1.Black"
                />
        </TextSwitcher>

        <com.tribe.app.presentation.view.widget.TextViewFont
            android:id="@+id/txtFriends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:alpha="1"
            android:text="@string/onboarding_queue_loading_friends"
            style="@style/Body.One.Black40"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/imgLockIcon"
        android:layout_width="28dp"
        android:layout_height="wrap_content"
        android:src="@drawable/picto_lock_icon"
        android:layout_gravity="center"
        />

</FrameLayout>