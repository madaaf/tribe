<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bottom_bar_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white.opacity.100"
    android:layout_gravity="bottom">

    <ImageView
        android:id="@+id/imgBackIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|bottom"
        android:layout_marginStart="@dimen/horizontal_margin_small"
        android:layout_marginBottom="@dimen/vertical_margin"
        android:gravity="center"
        android:clickable="true"
        android:src="@drawable/picto_next_icon_black"
        android:scaleX="-1"
        />

    <com.tribe.app.presentation.view.widget.EditTextFont
        android:id="@+id/editTextCode"
        android:background="@null"
        android:textColor="@android:color/black"
        android:layout_width="130dp"
        android:layout_height="22dp"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="@dimen/horizontal_margin"
        android:layout_gravity="bottom|center"
        android:hint="@string/Login.Code.Hint"
        style="@style/Text.Message.Input"
        android:inputType="phone"
        />

    <com.github.rahatarmanahmed.cpv.CircularProgressView
        android:id="@+id/circularProgressViewCode"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_gravity="end|bottom"
        android:layout_marginBottom="@dimen/vertical_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:visibility="invisible"
        app:cpv_animAutostart="true"
        app:cpv_indeterminate="true"
        app:cpv_color="@android:color/black"
        />

</FrameLayout>