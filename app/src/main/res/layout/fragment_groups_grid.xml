<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_rect_grey_background_rounded_corners">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/main.collapsing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">


                <com.tribe.app.presentation.view.component.GroupInfoView
                    android:id="@+id/groupInfoView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_collapseMode="parallax"
                    />

                <com.tribe.app.presentation.view.component.CreateInviteView
                    android:id="@+id/createInviteView"
                    android:layout_width="match_parent"
                    android:layout_height="115dp"
                    android:layout_marginTop="328dp"
                    app:layout_collapseMode="parallax"
                    />

            <com.tribe.app.presentation.view.component.GroupSuggestionsView
                android:id="@+id/groupSuggestionsView"
                android:layout_marginTop="206dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible"
                />


        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/layoutInvite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.tribe.app.presentation.view.component.SearchFriendsView
                android:id="@+id/searchFriendsView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_white_rect_grey_border"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewInvite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_rect_grey_border_no_top_no_background"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        />

    </LinearLayout>


    <ImageView
        android:id="@+id/imageDone"
        android:layout_width="@dimen/nav_icon_size"
        android:layout_height="@dimen/nav_icon_size"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="@dimen/horizontal_margin_smaller"
        android:layout_marginBottom="@dimen/vertical_margin_smaller"
        android:src="@drawable/picto_done_green" />

    <com.github.rahatarmanahmed.cpv.CircularProgressView
        android:id="@+id/circularProgressViewDone"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="@dimen/horizontal_margin_small"
        android:layout_marginBottom="@dimen/vertical_margin_small"
        android:padding="@dimen/cpv_padding"
        android:background="@drawable/bg_group_enabled"
        android:visibility="invisible"
        app:cpv_animAutostart="true"
        app:cpv_color="@android:color/white"
        app:cpv_indeterminate="true"
        app:cpv_thickness="2dp"
        />

    <View
        android:id="@+id/shadowMask"
        android:layout_width="match_parent"
        android:layout_marginTop="443dp"
        android:layout_height="20dp"
        android:visibility="invisible"
        android:background="@color/grey.background.profile_info"
        />

</android.support.design.widget.CoordinatorLayout>