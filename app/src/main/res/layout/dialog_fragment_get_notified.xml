<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:minHeight="244dp"
    android:minWidth="@dimen/dialog_fragment_width"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/shape_rect_white_rounded_corners"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/picto_notification_icon"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="26dp"
        />

    <com.tribe.app.presentation.view.widget.TextViewFont
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="82dp"
        android:text="@string/onboarding_queue_declined_popup_title"
        style="@style/Headline.Black.1"
        />

    <com.tribe.app.presentation.view.widget.TextViewFont
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="85dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:text="@string/onboarding_queue_declined_popup_description"
        android:gravity="center"
        style="@style/Title.1.Black"
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_bar_height"
        android:layout_gravity="bottom"
        >
        <com.tribe.app.presentation.view.widget.TextViewFont
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_rect_light_grey_rounded_bottom_left"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/onboarding_queue_declined_popup_cancel_button"
            style="@style/Title.2.White"
            />
        <com.tribe.app.presentation.view.widget.TextViewFont
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_rect_blue_rounded_bottom_right"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/onboarding_queue_declined_popup_confirm_button"
            style="@style/Title.2.White"
            />

    </LinearLayout>

</FrameLayout>