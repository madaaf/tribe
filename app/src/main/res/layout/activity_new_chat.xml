<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_rect_white_rounded_top_new"
    android:orientation="vertical"
    >

  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/top_bar_height_small"
      >

    <com.tribe.app.presentation.view.widget.TextViewFont
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text="@string/home_action_new_chat"
        android:textAllCaps="true"
        style="@style/Title.2.Black"
        />

    <ImageView
        android:id="@+id/btnClose"
        android:layout_width="@dimen/nav_icon_size"
        android:layout_height="@dimen/nav_icon_size"
        android:layout_gravity="left|center_vertical"
        android:background="@drawable/selectable_button_oval"
        android:clickable="true"
        android:scaleType="centerInside"
        android:src="@drawable/picto_close"
        />

    <com.tribe.app.presentation.view.widget.TextViewFont
        android:id="@+id/txtAction"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="@dimen/horizontal_margin"
        android:enabled="false"
        android:gravity="right|center_vertical"
        android:text="@string/action_create"
        android:textAllCaps="true"
        android:textColor="@color/color_new_chat_action_selector"
        android:textSize="15dp"
        app:customFont="ProximaNovaSoft-Bold.ttf"
        />

  </FrameLayout>

  <View
      android:layout_width="match_parent"
      android:layout_height="@dimen/divider_size"
      android:background="@color/grey.light"
      />

  <com.tribe.app.presentation.view.component.chat.ShortcutCompletionView
      android:id="@+id/viewShortcutCompletion"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="15dp"
      android:background="@null"
      android:focusableInTouchMode="true"
      android:imeOptions="actionDone"
      android:inputType="text|textNoSuggestions|textMultiLine"
      android:textColor="@android:color/black"
      android:textSize="11dp"
      />

  <View
      android:layout_width="match_parent"
      android:layout_height="@dimen/divider_size"
      android:background="@color/grey.light"
      />

  <android.support.v7.widget.RecyclerView
      android:id="@+id/recyclerViewShortcuts"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@null"
      android:scrollbars="vertical"
      />
</LinearLayout>