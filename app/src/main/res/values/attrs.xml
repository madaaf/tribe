<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TextViewFont">
        <attr name="customFont" format="string" />
    </declare-styleable>

    <declare-styleable name="AvatarView">
        <attr name="border" format="boolean"></attr>
    </declare-styleable>

    <declare-styleable name="RoundedCornerLayout">
        <attr name="cornerRadius" format="dimension"></attr>
    </declare-styleable>

    <declare-styleable name="TileView">
        <attr name="tileType" format="enum">
            <enum name="grid" value="0" />
            <enum name="tile" value="1" />
            <enum name="support" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="PictoVisualizerView">
        <attr name="picto" format="integer"></attr>
    </declare-styleable>

    <declare-styleable name="LabelButton">
        <attr name="drawable" format="integer"></attr>
        <attr name="type" format="enum">
            <enum name="infos" value="0" />
            <enum name="action" value="1" />
        </attr>
        <attr name="label" format="string" />
    </declare-styleable>

    <declare-styleable name="CameraWrapper">
        <attr name="cameraType" format="enum">
            <enum name="recording" value="0" />
            <enum name="setting" value="1" />
        </attr>
        <attr name="cameraHeight" format="dimension" />
        <attr name="cameraWidth" format="dimension" />
    </declare-styleable>

    <declare-styleable name="TribeVideoView">
        <attr name="scaleVideoType" format="enum">
            <enum name="top" value="0" />
            <enum name="bottom" value="1" />
            <enum name="fill" value="2" />
            <enum name="center_crop" value="3" />
            <enum name="center_crop_fill" value="4" />
        </attr>
        <attr name="autoStart" format="boolean" />
        <attr name="looping" format="boolean" />
        <attr name="mute" format="boolean" />
        <attr name="speedControl" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ButtonPointsView">
        <attr name="buttonDrawable" format="integer" />
        <attr name="buttonType" format="enum">
            <enum name="profile" value="0" />
            <enum name="fb_active" value="1" />
            <enum name="fb_progress" value="2" />
            <enum name="fb_disabled" value="3" />
        </attr>
        <attr name="buttonLabel" format="string" />
        <attr name="buttonSubLabel" format="string" />
        <attr name="buttonPoints" format="integer" />
        <attr name="buttonBGColor" format="integer" />
    </declare-styleable>

    <declare-styleable name="ButtonCardView">
        <attr name="buttonCardDrawable" format="integer" />
        <attr name="buttonCardType" format="enum">
            <enum name="points" value="0" />
            <enum name="meteo" value="1" />
            <enum name="location" value="2" />
            <enum name="city" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="Pulsator4Droid">
        <attr name="pulse_count" format="integer"/>
        <attr name="pulse_duration" format="integer"/>
        <attr name="pulse_color" format="color"/>
        <attr name="pulse_repeat" format="integer"/>
        <attr name="pulse_maxScale" format="float"/>
        <attr name="pulse_startFromScratch" format="boolean"/>
        <attr name="pulse_interpolator" format="enum">
            <enum name="Linear" value="0"/>
            <enum name="Accelerate" value="1"/>
            <enum name="Decelerate" value="2"/>
            <enum name="AccelerateDecelerate" value="3"/>
        </attr>
    </declare-styleable>
</resources>