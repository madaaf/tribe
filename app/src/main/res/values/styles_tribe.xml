<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Text.Tribe.Name">
        <item name="customFont">Roboto-Bold.ttf</item>
        <item name="android:textSize">15sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Text.Tribe.Infos">
        <item name="customFont">Roboto-Bold.ttf</item>
        <item name="android:textSize">13sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Text.Tribe.City">
        <item name="customFont">Roboto-Regular.ttf</item>
        <item name="android:textSize">15sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Text.Tribe.Speed">
        <item name="customFont">Roboto-Regular.ttf</item>
        <item name="android:textSize">15sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Text.Tribe.Weather">
        <item name="customFont">Roboto-Regular.ttf</item>
        <item name="android:textSize">30sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Text.Tribe.Sub">
        <item name="customFont">Roboto-Regular.ttf</item>
        <item name="android:textSize">13sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/white.opacity.40</item>
    </style>

    <style name="Text.Tribe" />

    <style name="Body">
        <item name="android:textSize">13sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Body.One" parent="Body">
        <item name="customFont">Roboto-Regular.ttf</item>
    </style>

    <style name="Body.Two" parent="Body">
        <item name="customFont">Roboto-Bold.ttf</item>
    </style>

    <style name="Body.One.Black" parent="@style/Body.One">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Body.One.White" parent="@style/Body.One">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Body.Two.Black" parent="@style/Body.Two">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Body.Two.White" parent="@style/Body.Two">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Caption">
        <item name="android:textSize">11sp</item>
        <item name="android:singleLine">true</item>
        <item name="customFont">Roboto-Regular.ttf</item>
    </style>

    <style name="Caption.White" parent="@style/Caption">
    </style>

    <style name="Caption.Black" parent="@style/Caption">
    </style>

    <style name="Caption.White.40">
        <item name="android:textColor">@color/white.opacity.40</item>
    </style>

    <style name="Caption.White.1">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Title.1" parent="@style/Title">
        <item name="customFont">Roboto-Regular.ttf</item>
    </style>

    <style name="Title.2" parent="@style/Title">
        <item name="customFont">Roboto-Bold.ttf</item>
    </style>
</resources>