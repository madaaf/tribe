<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Body">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Body.One" parent="Body">
        <item name="customFont">Roboto-Regular.ttf</item>
    </style>

    <style name="Body.Two" parent="Body">
        <item name="customFont">Roboto-Bold.ttf</item>
    </style>

    <style name="Body.One.Black" parent="@style/Body.One">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Body.One.Black40" parent="@style/Body.One">
        <item name="android:textColor">@color/black.opacity.40</item>
    </style>

    <style name="Body.One.White" parent="@style/Body.One">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Body.One.White40" parent="@style/Body.One">
        <item name="android:textColor">@color/white.opacity.40</item>
    </style>

    <style name="Body.Two.Blue" parent="@style/Body.Two">
        <item name="android:textColor">@color/blue.text</item>
    </style>

    <style name="Body.Two.Black" parent="@style/Body.Two">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Body.Two.Black40" parent="@style/Body.Two">
        <item name="android:textColor">@color/black.opacity.40</item>
    </style>

    <style name="Body.Two.White" parent="@style/Body.Two">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Body.Two.Points" parent="@style/Body.Two">
        <item name="android:textColor">@color/yellow</item>
    </style>

    <style name="Caption">
        <item name="android:textSize">11sp</item>
        <item name="customFont">Roboto-Regular.ttf</item>
    </style>

    <style name="Caption.White" parent="@style/Caption">
    </style>

    <style name="Caption.Black" parent="@style/Caption">
    </style>

    <style name="Caption.White.40">
        <item name="android:textColor">@color/white.opacity.40</item>
    </style>

    <style name="Caption.Black.40">
        <item name="android:textColor">@color/black.opacity.40</item>
    </style>

    <style name="Caption.White.1">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Title.1" parent="@style/Title">
        <item name="customFont">Roboto-Regular.ttf</item>
    </style>

    <style name="Title.2" parent="@style/Title">
        <item name="customFont">Roboto-Bold.ttf</item>
    </style>

    <style name="Title.2.White" parent="@style/Title.2">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Title.2.Black" parent="@style/Title.2">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Title.2.Points" parent="@style/Title.2">
        <item name="android:textColor">@color/yellow</item>
    </style>

    <style name="Title.1.Black" parent="@style/Title.1">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Title.1.Black40" parent="@style/Title.1">
        <item name="android:textColor">@color/black.opacity.40</item>
    </style>

    <style name="Title.1.Facebook" parent="@style/Title.1">
        <item name="android:textColor">@color/blue.facebook</item>
    </style>

    <style name="Headline">
        <item name="android:textSize">19sp</item>
    </style>

    <style name="Headline.White" parent="@style/Headline">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Headline.White.1" parent="@style/Headline.White">
        <item name="customFont">Roboto-Regular.ttf</item>
    </style>

    <style name="Headline.White.2" parent="@style/Headline.White">
        <item name="customFont">Roboto-Bold.ttf</item>
    </style>

    <style name="Weather">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">30sp</item>
        <item name="android:singleLine">true</item>
        <item name="customFont">Roboto-Regular.ttf</item>
    </style>

    <style name="Emoji">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">65sp</item>
        <item name="android:singleLine">false</item>
        <item name="customFont">Roboto-Regular.ttf</item>
    </style>


    <style name="Points">
        <item name="customFont">SBNav.ttf</item>
    </style>

    <style name="Points.Reg" parent="@style/Points">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Points.Reg.Black" parent="Points.Reg">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Points.Reg.Yellow" parent="Points.Reg">
        <item name="android:textColor">@color/yellow</item>
    </style>

    <style name="Points.Reg.Black40" parent="Points.Reg">
        <item name="android:textColor">@color/black.opacity.40</item>
    </style>

    <style name="Points.Large" parent="Points.Reg.Black">
        <item name="android:textSize">35sp</item>
    </style>
</resources>