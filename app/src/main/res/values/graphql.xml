<?xml version="1.0" encoding="utf-8"?>
<resources>
    <string name="user.infos">
        {
            user {
                ...UserInfos

                friendships {
                    id
                    tag
                    category
                    friend {
                        ...UserInfos
                    }
                }

                groups {
                    id
                    name
                    picture
                    created_at
                }
            }
        }

        %1$s
    </string>

    <string name="user.infos.list">
        {
            users (ids: [%1$s]) {
                ...UserInfos
            }
        }

        %2$s
    </string>

    <string name="friendships.infos">
        id
        tag
        category
        friend {
            ...UserInfos
        }
    </string>

    <string name="userfragment.infos">
        fragment UserInfos on User {
            id
            phone
            score
            username
            display_name
            picture
            created_at
        }
    </string>

    <!-- installs {
        gcm_id
        user {
            ...UserInfos
        }

        members {
            ...UserInfos
        }
    } -->
    <string name="user.mutate.username">
        mutation{
            updateUser(user: {
                %1$s: \"%2$s\"
            }) {
                picture
                username
                display_name
            }
        }
    </string>

    <string name="tribe.send.solo">
        mutation {
            sendTribeToUser(
                %1$s
            ) { id, recorded_at }
        }
    </string>

    <string name="tribe.send.group">
        mutation {
            sendTribeToGroup(
                %1$s
            ) { id, recorded_at }
        }
    </string>

    <string name="tribe.input">
        tribe : {
            to: \"%1$s\",
            type: \"%2$s\",
            recorded_at: \"%3$s\",
            lat: %4$s,
            lng: %5$s
        }
    </string>

    <string name="message.send.solo">
        mutation {
            sendMessageToUser(
                %1$s
            ) { id, created_at, recorded_at }
        }
    </string>

    <string name="message.send.group">
        mutation {
            sendMessageToGroup(
                %1$s
            ) { id, created_at, recorded_at }
        }
    </string>

    <string name="message.input">
        message : {
            to: \"%1$s\",
            type: \"%2$s\",
            recorded_at: \"%3$s\",
            content : \"%4$s\"
        }
    </string>

    <string name="chat.history.friendships">
        {
            friendships(ids: [\"%1$s\"]) {
                messages(limit: %2$d) {
                    id
                }
            }
        }
    </string>

    <string name="chat.history.groups">
        {
            groups(ids: [\"%1$s\"]) {
                messages(limit: %2$d) {
                    id
                }
            }
        }
    </string>

    <string name="messages.infos">
        {
            user {
                tribes %1$s {
                    id
                    from
                    to
                    to_group
                    type url
                    recorded_at
                    lat
                    lng

                    weather {
                        temp_f
                        temp_c
                        icon
                    }

                    location {
                        city
                    }

                    recipients {
                        to
                        is_seen
                    }
                }

                unSeenMessages {
                    id
                    from
                    to
                    to_group
                    type
                    content
                    recorded_at
                    created_at

                    recipients {
                        to
                        is_seen
                    }
                }
            }

            %2$s
        }
    </string>

    <string name="messages.status">
        {
            %1$s
        }
    </string>

    <string name="messages.start">
        (start : \"%1$s\")
    </string>

    <string name="tribe.sent.infos">
        tribes (ids: [%1$s]) {
            id

            recipients {
                to
                is_seen
            }
        }
    </string>

    <string name="mutation">
        mutation { %1$s }
    </string>

    <string name="tribe.markAsSeen.item">
        %1$s: markTribeAsSeen(id: \"%2$s\")
    </string>

     <string name="message.sent.infos">
        messages (ids: [%1$s]) {
            id

            recipients {
                to
                is_seen
            }
        }
    </string>

    <string name="messages.infos.short">
        {
            messages (ids: [%1$s]) {
                id
                from
                to
                to_group
                type
                content
                recorded_at
                created_at

                recipients {
                    to
                    is_seen
                }
            }
        }
    </string>

    <string name="chatMessage.markAsSeen.item">
        %1$s: markMessageAsSeen(id: \"%2$s\")
    </string>

    <string name="install.create">
        mutation {
            createInstall(install: %1$s) {
                id
            }
        }
    </string>

    <string name="install.update">
        mutation {
            updateInstall(id: \"%1$s\", install: %2$s) {
                id
            }
        }
    </string>

    <string name="install.remove">
        mutation {
            removeInstall(id: \"%1$s\")
        }
    </string>

    <string name="install.base">
        {
            user_id : \"%1$s\",
            token : \"%2$s\",
            os_name : \"%3$s\",
            os_version : \"%4$s\",
            device_manufacturer : \"%5$s\",
            device_model : \"%6$s\",
            client_version : \"%7$s\",
            client_id : \"%8$s\",
            lang : \"%9$s\",
            carrier : \"%10$s\"
        }
    </string>

    <string name="lookup">
        {
            %1$s
            %2$s
        }

        %3$s
    </string>

    <string name="lookup.phone">
        lookupPhone%1$d : lookupByPhone (phones: [%2$s]) {
            ...UserInfos
        }
    </string>

    <string name="lookup.facebook">
        lookupFB%1$d : lookupByFbid (fbids: [%2$s]) {
            ...UserInfos
        }
    </string>

    <string name="createFriendship.mutation">
        mutation {
            %1$s
        }

        %2$s
    </string>

    <string name="createFriendship.input">
        createFriendship%1$d : createFriendship(
            friendship : {
                category : \"main\",
                status : DEFAULT,
                tag : \"friend\"
            },
            friendId : \"%2$s\"
        ) {
            %3$s
        }
    </string>

    <string name="howManyFriends.part">
        howManyFriends%1$d : howManyFriends (phones: [%2$s])
    </string>
</resources>