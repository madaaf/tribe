<?xml version="1.0" encoding="utf-8"?>
<resources>
    <string name="user.infos" translatable="false">
        {
            user {
                ...UserInfos

                friendships %1$s {
                    id
                    status
                    tag
                    category
                    friend {
                        ...UserInfos
                    }
                }

                memberships %2$s {
                    ...MembershipInfo
                }
            }
        }

        %3$s
        %4$s
        %5$s
    </string>

    <string name="user.infos.list" translatable="false">
        {
            users (ids: [%1$s]) {
                ...UserInfos
            }
        }

        %2$s
    </string>

    <string name="friendships.infos" translatable="false">
        id
        tag
        category
        status
        friend {
            ...UserInfos
        }
    </string>

    <string name="userfragment.infos" translatable="false">
        fragment UserInfos on User {
            id
            phone
            fbid
            invisible_mode
            username
            display_name
            picture
            created_at
            push_notif
            is_online
        }
    </string>

    <string name="user.mutate" translatable="false">
        mutation {
            updateUser(user: {
                %1$s
            }) {
                ...UserInfos
            }
        }

        %2$s
    </string>

    <string name="input.start" translatable="false">
        (start : \"%1$s\")
    </string>

    <string name="mutation" translatable="false">
        mutation { %1$s }
    </string>

    <string name="installs" translatable="false">
        {
            user {
                installs {
                    id
                    token
                }
            }
        }
    </string>

    <string name="install.create" translatable="false">
        mutation {
            createInstall(install: %1$s) {
                id
                token
            }
        }
    </string>

    <string name="install.update" translatable="false">
        mutation {
            updateI : updateInstall(id: \"%1$s\", install: %2$s) {
                id
                token
            }

            updateU : updateUser(user: {
                last_seen_at : \"%3$s\"
            }) {
                id
            }
        }
    </string>

    <string name="install.remove" translatable="false">
        mutation {
            removeInstall(id: \"%1$s\")
        }
    </string>

    <string name="install.base" translatable="false">
        {
            user_id : \"%1$s\",
            token : \"%2$s\",
            os_name : \"%3$s\",
            os_version : \"%4$s\",
            device_manufacturer : \"%5$s\",
            device_model : \"%6$s\",
            client_version : \"%7$s\",
            client_id : \"%8$s\",
            lang : \"%9$s\",
            carrier : \"%10$s\"
        }
    </string>

    <string name="lookup" translatable="false">
        {
            %1$s
            %2$s
        }

        %3$s
    </string>

    <string name="lookup.phone" translatable="false">
        lookupPhone%1$d : lookupByPhone (phones: [%2$s]) {
            ...UserInfos
        }
    </string>

    <string name="lookup.facebook" translatable="false">
        lookupFB%1$d : lookupByFbid (fbids: [%2$s]) {
            ...UserInfos
        }
    </string>

    <string name="lookup.username" translatable="false">
        {
            lookupByUsername (usernames: [\"%1$s\"]) {
                ...UserInfos
            }
        }

        %2$s
    </string>

    <string name="friendship.mutation" translatable="false">
        mutation {
            %1$s
        }

        %2$s
    </string>

    <string name="createFriendship.input" translatable="false">
        createFriendship%1$d : createFriendship(
            friendship : {
                category : \"main\",
                status : DEFAULT,
                tag : \"friend\"
            },
            friendId : \"%2$s\"
        ) {
            %3$s
        }
    </string>

    <string name="removeFriendship.input" translatable="false">
        removeFriendship%1$d : removeFriendship(friendshipId : \"%2$s\")
    </string>

    <string name="howManyFriends.part" translatable="false">
        howManyFriends%1$d : howManyFriends (phones: [%2$s])
    </string>

    <string name="groupfragment.info" translatable="false">
        fragment GroupInfo on Group {
            id
            name
            picture
            created_at
        }
    </string>

    <string name="groupfragment.info.members" translatable="false">
        fragment GroupInfo on Group {
            id
            name
            picture
            created_at
            members {
                ...UserInfos
            }
        }
    </string>

    <string name="membershipfragment.info" translatable="false">
        fragment MembershipInfo on Membership {
            id
            group {
                ...GroupInfo
            }
            mute
            created_at
            updated_at
        }
    </string>

    <string name="membershipfragment.info.light" translatable="false">
        fragment MembershipInfo on Membership {
            id
            mute
            created_at
            updated_at
        }
    </string>

    <string name="get.group.infos" translatable="false">
        {
            groups (ids : [\"%1$s\"]) {
                ...GroupInfo
            }
        }

        %2$s
        %3$s
    </string>

    <string name="get.group.members" translatable="false">
        {
            groups (ids : [\"%1$s\"]) {
                ...GroupInfo

                members {
                    ...UserInfos
                }
            }
        }

        %2$s
        %3$s
    </string>

    <string name="create.group" translatable="false">
       mutation {
            createGroup(group: {
                name : \"%1$s\",
   	            type : %2$s
            } %3$s
            ) {
                ...GroupInfo
            }
        }
        %4$s
    </string>

    <string name="create.group.members" translatable="false">
        , members: [%1$s]
    </string>

    <string name="update.group" translatable="false">
        mutation {
            updateGroup(id : \"%1$s\",
                group : { %2$s }
            ) {
                ...GroupInfo
            }
        }

        %3$s
    </string>

    <string name="update.membership" translatable="false">
        mutation {
            updateMembership(membershipId : \"%1$s\",
                membership : { %2$s }
            ) {
                ...MembershipInfo
            }
        }

        %3$s
    </string>

    <string name="add.members.group" translatable="false">
        mutation{
            addMembersToGroup(id : \"%1$s\", members: [%2$s]) {
                id
            }
        }
    </string>

    <string name="remove.members.group" translatable="false">
        mutation {
            removeMembersFromGroup(id : \"%1$s\", members: [%2$s]) {
                id
            }
        }
    </string>

    <string name="remove.group" translatable="false">
        mutation {
            removeGroup(id : \"%1$s\")
        }
    </string>

    <string name="leave.group" translatable="false">
        mutation {
            removeMembership(membershipId: \"%1$s\")
        }
    </string>

    <string name="create.membership" translatable="false">
        mutation {
            createMembership(groupId: \"%1$s\") {
                ...MembershipInfo
            }
        }

        %2$s
        %3$s
        %4$s
    </string>

    <string name="boostrap.support" translatable="false">
        mutation {
            bootstrapSupport
        }
    </string>

    <string name="user.update.friendship" translatable="false">
        mutation {
            updateFriendship(friendshipId : \"%1$s\", friendship : {
                status : %2$s
            }) {
                id
            }
        }
    </string>

    <string name="notify.facebook" translatable="false">
        mutation {
            runFacebookInvites(appId : \"%1$s\", accessToken : \"%2$s\")
        }
    </string>

    <string name="online.notification" translatable="false">
        mutation {
            runOnlinePush
        }
    </string>

    <string name="subscription" translatable="false">
        subscription { %1$s }
    </string>

    <string name="subscription.updatedUser" translatable="false">
        %1$s : userUpdated ( id : \"%2$s\" ) {
            ...UserInfos
        }
    </string>

    <string name="subscription.updatedGroup" translatable="false">
        %1$s : groupUpdated ( id : \"%2$s\" ) {
            ...GroupInfo
        }
    </string>
</resources>